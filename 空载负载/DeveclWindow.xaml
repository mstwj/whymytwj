<Window x:Class="空载负载.DeveclWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:空载负载"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"        
        Title="" Height="260" Width="320">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Background="#FFE2E2E2" Grid.Row="0" >

            <GroupBox Background="#FFE2E2E2" Margin="10" BorderThickness="2" BorderBrush="Black"  Header="设备配置" FontSize="16">

                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="18" />
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" >
                        <TextBlock  Text="功率分析仪设置"  Margin="10 0 10 0" ></TextBlock>
                        <ComboBox x:Name="Device_CBox"  Width="130" SelectedItem="{Binding SelectItem}" ItemsSource="{Binding ComboBoxItems}"  />
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" >
                        <TextBlock Text="电压表" Width="110" Margin="10 0 10 0" ></TextBlock>
                        <!--
                        <ComboBox  Width="100" VerticalAlignment="Center" HorizontalAlignment="Left" SelectedItem="{Binding SelectItem2}" ItemsSource="{Binding ComboBoxItems2}"  />
                        -->
                        <ComboBox x:Name="Device_CBox2"  Width="130" SelectedItem="{Binding SelectItem2}" ItemsSource="{Binding ComboBoxItems2}"  />
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button  Content="保存配置" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Click="Button_Click_Save"></Button>
            <Button  Content="退出配置" FontSize="15" Height="35" Width="80" Margin="10 0 0 0" Click="Button_Click_Quit"></Button>
        </StackPanel>
    </Grid>
</Window>
