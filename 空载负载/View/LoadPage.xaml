<UserControl x:Class="空载负载.View.LoadPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:空载负载.View" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280">

    <UserControl.Resources>

        <sys:Double x:Key="RowH">18</sys:Double>

        <Style TargetType="GroupBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="Blue" >
            <Label  VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"  Content="负 载 试 验" FontSize="20" Foreground="White"></Label>
        </Border>


        <Border Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}" >
            <Grid>
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="650"></ColumnDefinition>
                    <ColumnDefinition Width="340"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"></RowDefinition>
                            <RowDefinition Height="2.0*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Image Margin="10" Width="90" x:Name="myImage" Source="../Asset/headlogo.png" />

                                <GroupBox Grid.Column="1" Grid.ColumnSpan="4" Header="标准" Padding="10" Margin="15,10,5,10" Grid.RowSpan="2">
                                    <GroupBox.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                        </DataTemplate>
                                    </GroupBox.HeaderTemplate>

                                    <local:UserLoadHead x:Name="UserLoadHead"></local:UserLoadHead>
                                        
                                </GroupBox>
                            </Grid>
                        </Border>

                        <GroupBox  Grid.Row="1"  Header="实时测量数据"  Padding="10" Margin="15,10,5,10">

                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5*"></RowDefinition>
                                    <RowDefinition ></RowDefinition>
                                </Grid.RowDefinitions>

                                <local:UserLoadMainControl x:Name="UserLoadMainControl"></local:UserLoadMainControl>

                                <StackPanel Grid.Row="1"  Orientation="Horizontal" HorizontalAlignment="Center" >
                                    <Button x:Name="BCommandStart" Content="开始测量" Command="{Binding BtnCommandStart}" Margin="5 0" Width="100" Height="35"></Button>
                                    <Button x:Name="BCommandStop" Content="暂停测量" Command="{Binding BtnCommandStop}" Margin="5 0" Width="100" Height="35" ></Button>
                                    <Button x:Name="BCommandSave" Content="保存数据" Command="{Binding BtnCommandSave}" Margin="5 0" Width="100" Height="35"></Button>
                                    <Button x:Name="BCommandConnect" Content="联机" Command="{Binding BtnCommandConnect}" Margin="5 0" Width="80" Height="35"></Button>
                                    <Button x:Name="BCommandRead" Content="负载" Command="{Binding BtnCommandComin}" Margin="5 0" Width="80" Height="35"></Button>
                                    <Button x:Name="BCommandQuit" Content="停止" Command="{Binding BtnCommandQuit}" Margin="5 0" Width="80" Height="35"></Button>


                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <GroupBox Grid.Row="2" Grid.Column="0" Header="测试结果数据" Padding="10" Margin="15,0,5,20">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <local:UserLoadRecordControl x:Name="UserLoadRecordControl"></local:UserLoadRecordControl>
                        </GroupBox>
                    </Grid>
                </Border>

                <Border Grid.Column="1" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.1*"></RowDefinition>
                            <RowDefinition Height="110"></RowDefinition>
                            <RowDefinition Height="1.2*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0" Grid.Column="0" Header="信号状态" Padding="5" Margin="10">

                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <local:PLCStateControl x:Name="PLCStateControl"></local:PLCStateControl>

                        </GroupBox>

                        <GroupBox Grid.Row="1"  Header="CT-电流档位"  Padding="5" Margin="10">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" Content="5A" Command="{Binding CommandPlc50}" ></Button>
                                <Button Grid.Column="1" Content="10A" Command="{Binding CommandPlc51}" ></Button>
                                <Button Grid.Column="2" Content="20A" Command="{Binding CommandPlc52}" ></Button>
                                <Button Grid.Column="3" Content="50A" Command="{Binding CommandPlc53}" ></Button>
                                <Button Grid.Column="4" Content="100A" Command="{Binding CommandPlc54}" ></Button>
                                <Button Grid.Column="5" Content="200A" Command="{Binding CommandPlc55}" ></Button>
                            </Grid>

                        </GroupBox>


                        <GroupBox Grid.Row="2" Grid.Column="0" Header="试验操作" Padding="10" Margin="10,0,10,10">


                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>

                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Button Margin="15 5" Grid.Row="4" Grid.Column="1" Content="降压"  x:Name="MyButton" MouseDown="Button_MouseDown" MouseUp="Button_MouseUp"/>
                                <Button Margin="15 5" Grid.Row="4" Grid.Column="0" Content="升压" x:Name="MyButton2" MouseDown="Button_MouseDown2" MouseUp="Button_MouseUp2"></Button>


                                <Button Margin="15 5" Grid.Row="3" Grid.Column="0" Content="电源合闸" Command="{Binding CommandPlc3}"></Button>
                                <Button Margin="15 5" Grid.Row="3" Grid.Column="1" Content="电源分闸" Command="{Binding CommandPlc4}"></Button>

                                <Button Margin="15 5" Grid.Row="2" Grid.Column="0" Content="电动机启动" Command="{Binding CommandPlc5}"></Button>
                                <Button Margin="15 5" Grid.Row="2" Grid.Column="1" Content="电动机停止" Command="{Binding CommandPlc6}"></Button>


                                <Button Margin="15 5" Grid.Row="1" Grid.Column="0" Content="工频回路" Command="{Binding CommandPlc8}"></Button>
                                <Button Background="Red" Margin="15 5" Grid.Row="5" Grid.Column="1" Content="急停" Command="{Binding CommandPlc9}"></Button>

                                <Button Margin="15 5" Grid.Row="0" Grid.Column="1" Content="感应回路" Command="{Binding CommandPlc10}"></Button>
                                <Button Margin="15 5" Grid.Row="1" Grid.Column="1" Content="复位" Command="{Binding CommandPlc11}"></Button>

                                <Button Margin="15 5" Grid.Row="0" Grid.Column="0" Content="特性回路" Command="{Binding CommandPlc7}"></Button>


                                <Button Margin="15 5" Grid.Row="5" Grid.Column="0" Content="快/慢" Command="{Binding CommandK}"></Button>





                            </Grid>



                        </GroupBox>

                    </Grid>

                </Border>

                <Border Grid.Row="0" Grid.Column="2" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.3*"></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="0.5*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0" Header="通讯状态" Padding="5" Margin="10">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <local:UserCommunicationControl x:Name="UserCommunicationControl"></local:UserCommunicationControl>
                        </GroupBox>

                        <GroupBox Header="参数设置" Grid.Row="1" Margin="10">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>

                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Row="0"  Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="试验电流(A):" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding TextCurrent}" x:Name="TextCurrentBox" LostFocus="TextBox_LostFocus" Width="100" Height="30" Margin="10 0"></TextBox>

                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="保护电压(V):" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding ProtectVoltage}" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="保护电流(A):" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding ProtectCurrent}" x:Name="ProtectCurrentBox" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="加压部位:" VerticalAlignment="Center"></TextBlock>
                                    <ComboBox Width="100" Height="30" Margin="10 0" SelectedIndex="0">
                                        <ComboBoxItem Content="高侧"></ComboBoxItem>
                                        <ComboBoxItem Content="低侧"></ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="操作模式:" VerticalAlignment="Center"></TextBlock>
                                    <ComboBox Width="100" Height="30" Margin="10 0" SelectedIndex="{Binding IsAutoOrMu}">
                                        <ComboBoxItem Content="手动"></ComboBoxItem>
                                        <ComboBoxItem Content="程控"></ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="测量方式:" VerticalAlignment="Center"></TextBlock>
                                    <ComboBox Width="100" Height="30" Margin="10 0"  SelectedIndex="{Binding selectbiaofa}"  >
                                        <ComboBoxItem Content="双表法"></ComboBoxItem>
                                        <ComboBoxItem Content="三表法"></ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="高压直阻(Ω):" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding gaoyacezhizu}" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="7" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="低压直阻(mΩ):" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding diyacezhizu}" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="8" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="直阻温度:" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding zhizuwendu}" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="9" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="试品温度:" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding shipinwendu}" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="10" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="折算温度:" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding mubiaowendu}" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="11" Margin="5" HorizontalAlignment="Center">
                                    <Button Content="开始自动" Width="100"  Margin="10 0"  Command="{Binding CommandAuto}"></Button>
                                    <Button Content="停止自动" Width="100"  Margin="10 0"  Command="{Binding CommandAtuoStop}"></Button>
                                </StackPanel>

                            </Grid>


                        </GroupBox>

                        <GroupBox Header="日志" Grid.Row="2"  Padding="5" Margin="10">

                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <ListBox ItemsSource="{Binding ListBoxData}" Grid.Column="1" FontSize="15" >
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Blue"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRed}" Value="True">
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <TextBlock.Text>
                                                <Binding Path="Text"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>

                        <!--
                        <GroupBox Header="设备操作" Grid.Row="3" Margin="5" Padding="5">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Row="0" Grid.Column="0" Content="联机" Command="{Binding CommandDev1}"></Button>
                                <Button Grid.Row="1" Grid.Column="0" Content="空载测试" Command="{Binding CommandDev2}"></Button>

                                <Button Grid.Row="0" Grid.Column="1" Content="读数" Command="{Binding CommandDev3}"></Button>
                                <Button Grid.Row="1" Grid.Column="1" Content="退出" Command="{Binding CommandDev4}"></Button>

                            </Grid>

                        </GroupBox>
                        -->


                    </Grid>
                </Border>

            </Grid>


        </Border>


    </Grid>
</UserControl>