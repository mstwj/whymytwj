<UserControl x:Class="空载负载.View.UtilityPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:空载负载.View" xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280">

    <UserControl.Resources>

        <sys:Double x:Key="RowH">18</sys:Double>

        <Style TargetType="GroupBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </UserControl.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="Blue" >
            <Label  VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"  Content="工 频 耐 压 试 验" FontSize="20" Foreground="White"></Label>
        </Border>


        <Border Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}" >
            <Grid>
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="990"></ColumnDefinition>
                    
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.3*"></RowDefinition>
                            
                            <RowDefinition Height="0.3*"></RowDefinition>
                            <RowDefinition Height="0.3*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Image Margin="10" Width="90" x:Name="myImage" Source="../Asset/headlogo.png" />

                                <GroupBox Grid.Column="1" Grid.ColumnSpan="4" Header="标准" Padding="10" Margin="15,10,5,10" Grid.RowSpan="2">
                                    <GroupBox.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                        </DataTemplate>
                                    </GroupBox.HeaderTemplate>

                                    <local:UtilityHeadControl x:Name="UtilityHeadControl"></local:UtilityHeadControl>
                                </GroupBox>
                            </Grid>
                        </Border>

                        <GroupBox  Grid.Row="3"  Header="实时测量数据"  Padding="10" Margin="15,10,5,10">

                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <lvc:CartesianChart x:Name="Chart" Margin="3" LegendLocation="Top"  >
                                <lvc:CartesianChart.Series  >
                                    <lvc:LineSeries     
                                        StrokeThickness="1"
                                        DataLabels="False" 
                                        PointGeometrySize="0" 
                                        Stroke="DodgerBlue" 
                                        Values="{Binding ServerLineData}" 
                                        Title="电压(kV)" />
                                </lvc:CartesianChart.Series>

                                <lvc:CartesianChart.AxisX >
                                    <lvc:Axis ShowLabels="True" 
                                              x:Name="MyAxis"                                              
                                                MinValue="0" 
                                                MaxValue="120"
                                          Title="时间(S)" >
                                        <lvc:Axis.Separator>
                                            <lvc:Separator Step="10" StrokeThickness="1" />
                                        </lvc:Axis.Separator>

                                    </lvc:Axis>

                                </lvc:CartesianChart.AxisX>

                                <lvc:CartesianChart.AxisY >

                                    <lvc:Axis  Title="电压(kV)"
                                               x:Name="MyAyis"
                                       MinValue="0" 
                                       MaxValue="100" 
                                       ShowLabels="True"
                                       Foreground="IndianRed"
                                       >
                                        <lvc:Axis.Separator>
                                            <lvc:Separator Step="10" />
                                        </lvc:Axis.Separator>
                                    </lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>


                        </GroupBox>

                        <GroupBox Grid.Row="2" Header="操作"  Padding="10" Margin="15,10,5,10">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="高压电压(kV):" VerticalAlignment="Center" Margin="10" FontSize="20"></TextBlock>
                                <TextBlock Text="{Binding CurrentGaoyaVoild}" Width="70" VerticalAlignment="Center" FontSize="20"></TextBlock>

                                <TextBlock Text="低压电流(A):" VerticalAlignment="Center" Margin="10" FontSize="20"></TextBlock>
                                <TextBlock Text="{Binding CurrentDiyaVoild}" Width="70" VerticalAlignment="Center"  FontSize="20"></TextBlock>
                                
                                <TextBlock Text="高压电流(mA):" VerticalAlignment="Center" Margin="10" FontSize="20"></TextBlock>
                                <TextBlock Text="{Binding CurrentElectricCurrent}" Width="70" VerticalAlignment="Center"  FontSize="20"></TextBlock>

                                <TextBlock Text="耐压时间(s):" VerticalAlignment="Center" Margin="10" FontSize="20"></TextBlock>
                                <TextBlock Text="{Binding NaiYaTime}" Width="70" VerticalAlignment="Center" Margin="0 0 25 0"  FontSize="20"></TextBlock>

                                <Button Content="保存" Width="70" Height="40" Margin="10 10"  Command="{Binding CommandSave}"></Button>
                            </StackPanel>

                        </GroupBox>


                        <GroupBox Grid.Row="1" Header="信号状态"  Margin="15 10 5 10">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <local:UtilityPLCStateControl x:Name="UtilityPLCStateControl" ></local:UtilityPLCStateControl>
                        </GroupBox>


                    </Grid>
                </Border>

                <Border Grid.Column="1" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition ></RowDefinition>
                        </Grid.RowDefinitions>

                        
                        

                    </Grid>

                </Border>

                <Border Grid.Row="0" Grid.Column="2" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.4*"></RowDefinition>
                            <RowDefinition Height="0.9*"></RowDefinition>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition Height="0.6*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0" Header="通讯状态" Padding="5" Margin="10">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            <local:UserCommunicationControl x:Name="UserCommunicationControl"></local:UserCommunicationControl>
                        </GroupBox>

                        <GroupBox Header="参数设置" Grid.Row="1" Margin="10">
                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition ></RowDefinition>
                                </Grid.RowDefinitions>

                                <StackPanel Orientation="Horizontal" Grid.Row="0"  Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="试验电压(kV):" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding TextV}" x:Name="TextVBox" LostFocus="TextBox_LostFocus" Width="100" Height="30" Margin="10 0"></TextBox>

                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="保护电压(kV):" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding ProtectVoltage}" x:Name="ProtectVoltageBox" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="保护电流(mA):" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding ProtectCurrent}" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="5" HorizontalAlignment="Center">
                                    <TextBlock Width="110" Text="设置时间(s):" VerticalAlignment="Center"></TextBlock>
                                    <TextBox Text="{Binding MyTime}" Width="100" Height="30" Margin="10 0"></TextBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="5" HorizontalAlignment="Center">
                                    <Button x:Name="ButtonQRSZ" Content="确认设置" Width="150" Command="{Binding CommandSet}" Height="40"></Button>
                                </StackPanel>







                            </Grid>


                        </GroupBox>


                        <GroupBox Grid.Row="2" Grid.Column="0" Header="试验操作" Padding="10" Margin="10,0,10,10">


                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Button Margin="15 5" Grid.Row="2" Grid.Column="1" Content="降压"  x:Name="MyButton" MouseDown="Button_MouseDown" MouseUp="Button_MouseUp"/>
                                <Button Margin="15 5" Grid.Row="2" Grid.Column="0" Content="升压" x:Name="MyButton2" MouseDown="Button_MouseDown2" MouseUp="Button_MouseUp2"></Button>


                                <Button x:Name="ButtonDYHZ"  Margin="15 5" Grid.Row="1" Grid.Column="0" Content="电源合闸" Command="{Binding CommandPlc3}"></Button>
                                <Button x:Name="ButtonDYFZ" Margin="15 5" Grid.Row="1" Grid.Column="1" Content="电源分闸" Command="{Binding CommandPlc4}"></Button>


                                <Button x:Name="ButtonFW" Margin="15 5" Grid.Row="0" Grid.Column="1" Content="复位" Command="{Binding CommandPlc11}"></Button>
                                <Button  x:Name="ButtonGPHL"  Margin="15 5" Grid.Row="0" Grid.Column="0" Content="工频回路" Command="{Binding CommandPlc8}"></Button>
                                <Button Background="Red" Margin="15 5" Grid.Row="3" Grid.Column="1" Content="急停" Command="{Binding CommandPlc9}"></Button>






                                <Button x:Name="ButtonKM" Margin="15 5" Grid.Row="3" Grid.Column="0" Content="快/慢" Command="{Binding CommandK}"></Button>



                                <Button x:Name="ButtonKSJS" Margin="15 5" Grid.Row="4" Grid.Column="0" Content="开始记时" Command="{Binding CommandStratTime}"></Button>
                                <Button x:Name="ButtonTZJS" Margin="15 5" Grid.Row="4" Grid.Column="1" Content="停止记时" Command="{Binding CommandStopTime}"></Button>


                                <Button Margin="15 5" Grid.Row="5" Grid.Column="0" Content="开始自动" Command="{Binding CommandStratAuto}"></Button>
                                <Button Margin="15 5" Grid.Row="5" Grid.Column="1" Content="停止自动" Command="{Binding CommandStopAuto}"></Button>



                            </Grid>



                        </GroupBox>

                        <GroupBox Header="日志" Grid.Row="3"  Padding="5" Margin="10">

                            <GroupBox.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>

                            <ListBox ItemsSource="{Binding ListBoxData}" Grid.Column="1" FontSize="15" >
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="Blue"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRed}" Value="True">
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <TextBlock.Text>
                                                <Binding Path="Text"/>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>

                        <!--
                    <GroupBox Header="设备操作" Grid.Row="3" Margin="5" Padding="5">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="{Binding Source={StaticResource RowH}}" />
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Row="0" Grid.Column="0" Content="联机" Command="{Binding CommandDev1}"></Button>
                            <Button Grid.Row="1" Grid.Column="0" Content="空载测试" Command="{Binding CommandDev2}"></Button>

                            <Button Grid.Row="0" Grid.Column="1" Content="读数" Command="{Binding CommandDev3}"></Button>
                            <Button Grid.Row="1" Grid.Column="1" Content="退出" Command="{Binding CommandDev4}"></Button>

                        </Grid>

                    </GroupBox>
                    -->


                    </Grid>
                </Border>

            </Grid>


        </Border>


    </Grid>
</UserControl>
