<UserControl x:Class="空载负载.View.UserInductionRecordControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:空载负载.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="580" Height="180">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="15"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Black"></Setter>
                <Setter Property="BorderThickness" Value="1"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                
                <TextBlock Text="UrmsΣ(V)" FontSize="15" Grid.Row="0" Grid.Column="0"></TextBlock>
                <TextBlock Text="IrmsΣ(A)" FontSize="15" Grid.Row="0" Grid.Column="1"></TextBlock>
                <!--
                <TextBlock Text="空载电流(A)" Visibility="Hidden" FontSize="15" Grid.Row="0" Grid.Column="3"></TextBlock>
                -->

                <TextBlock Text="{Binding Voltage}" Grid.Row="1" Grid.Column="0"></TextBlock>
                <TextBlock Text="{Binding RMSvalue}" Grid.Row="1" Grid.Column="1"></TextBlock>
                
                
                


                <!--使用Border绘制边框-->
                <Border Grid.Row="0" Grid.Column="0"></Border>
                <Border Grid.Row="0" Grid.Column="1"></Border>
                <Border Grid.Row="0" Grid.Column="2"></Border>
                <Border Grid.Row="0" Grid.Column="3"></Border>

                <Border Grid.Row="1" Grid.Column="0"></Border>
                <Border Grid.Row="1" Grid.Column="1"></Border>
                <Border Grid.Row="1" Grid.Column="2"></Border>
                <Border Grid.Row="1" Grid.Column="3"></Border>

            </Grid>

        </Border>

        <Border Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Text="F(Hz)" FontSize="15" Grid.Row="0" Grid.Column="0"></TextBlock>
                <TextBlock Text="Time(s)" FontSize="15" Grid.Row="0" Grid.Column="1"></TextBlock>
                <TextBlock Text="合格判断" FontSize="15" Grid.Row="0" Grid.Column="2"></TextBlock>

                <TextBlock Text="{Binding Frequency}" Grid.Row="1" Grid.Column="0"></TextBlock>
                <TextBlock Text="{Binding Times}" Grid.Row="1" Grid.Column="1"></TextBlock>
                <TextBlock Text="{Binding QualifiedJudgment}" Grid.Row="1" Grid.Column="2"></TextBlock>


                <!--使用Border绘制边框-->
                <Border Grid.Row="0" Grid.Column="0"></Border>
                <Border Grid.Row="0" Grid.Column="1"></Border>
                <Border Grid.Row="0" Grid.Column="2"></Border>

                <Border Grid.Row="1" Grid.Column="0"></Border>
                <Border Grid.Row="1" Grid.Column="1"></Border>
                <Border Grid.Row="1" Grid.Column="2"></Border>
            </Grid>


        </Border>



    </Grid>
</UserControl>
