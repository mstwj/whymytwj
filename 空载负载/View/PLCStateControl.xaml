<UserControl x:Class="空载负载.View.PLCStateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:空载负载.View" xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <UserControl.Resources>
        <sys:Int32 x:Key="MyIntResource">20</sys:Int32>
    </UserControl.Resources>
    
    <Grid Width="300" Height="450">
        <Grid.RowDefinitions>
            
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="计时" Margin="0 2" ></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDIc3Image}"></Image>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="零位" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDIc4Image}"></Image>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="调压器上限" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDIc5Image}"></Image>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="特性回路" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDId4Image}"></Image>
        </StackPanel>


        <StackPanel Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="工频回路" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDId6Image}"></Image>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="电动机运行" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDId7Image}"></Image>
        </StackPanel>


        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="过流信号" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDIe1Image}"></Image>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="5A" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDIc6Image}"></Image>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="10A" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDIc7Image}"></Image>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="20A" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDId0Image}"></Image>
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="50A" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDId1Image}"></Image>
        </StackPanel>


        <StackPanel Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="100A" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDId2Image}"></Image>
        </StackPanel>



        <StackPanel Grid.Row="0"  Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="感应回路" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDId5Image}"></Image>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="安防信号" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDIe2Image}"></Image>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="慢" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcKImage}"></Image>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="快" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcMImage}"></Image>
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="电源合闸" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDIe0Image}"></Image>
        </StackPanel>


        <StackPanel Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="200A" Margin=" 0 2"></TextBlock>
            <Image Width="{Binding Source={StaticResource MyIntResource}}" Height="{Binding Source={StaticResource MyIntResource}}" Source="{Binding PlcDId3Image}"></Image>
        </StackPanel>

    </Grid>
    
</UserControl>
