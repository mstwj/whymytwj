<Window x:Class="空载负载.TableUtilityStandardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:空载负载"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="TableUtilityStandardDialog" Height="600" Width="600">
    <Grid>
        <Grid ShowGridLines="True" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Background="#2263B3" Grid.Row="0">
                <TextBlock Text="工频耐压标准库" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <DataGrid x:Name="dataGrid" RowEditEnding="dataGrid_RowEditEnding"                                             
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                      FontSize="15"
                Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="规格型号" Binding="{Binding ProductType}" />
                    <DataGridTextColumn Header="图号" Binding="{Binding ProductTuhao}" />
                    <DataGridTextColumn Header="电压(kV)" Binding="{Binding Voltage}" />
                    <DataGridTextColumn Header="时间(s)" Binding="{Binding Times}" />

                </DataGrid.Columns>
            </DataGrid>

            <Border Background="#2263B3" Grid.Row="2">
                <TextBlock Text="添加工频耐压标准" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <Grid Grid.Row="3"  Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}" >

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>


                <StackPanel  Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center" >
                    <TextBlock FontSize="15" Width="150" Text="规格型号"></TextBlock>
                    <TextBox   FontSize="15" Width="170" Text="{Binding ProductType}"></TextBox>
                </StackPanel>

                <StackPanel  Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center" >
                    <TextBlock FontSize="15" Width="150" Text="图号"></TextBlock>
                    <TextBox   FontSize="15" Width="170" Text="{Binding ProductTuhao}"></TextBox>
                </StackPanel>


                <StackPanel  Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center" >
                    <TextBlock FontSize="15" Width="150" Text="电压(kV)"></TextBlock>
                    <TextBox   FontSize="15" Width="170" Text="{Binding Voltage}"></TextBox>
                </StackPanel>


                <StackPanel  Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center" >
                    <TextBlock FontSize="15" Width="150" Text="时间(s)"></TextBlock>
                    <TextBox   FontSize="15" Width="170" Text="{Binding Times}"></TextBox>
                </StackPanel>

            </Grid>

            <StackPanel Grid.Row="4" Grid.Column="0" Height="40" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Label Content="按规格型号" FontSize="16" VerticalAlignment="Center" ></Label>
                <TextBox Text="{Binding SelectXinhao}" Width="200" FontSize="16"  Height="25" ></TextBox>
                <Button Click="QueryButton_Click" Content="查询" Width="80" Margin="10 0 10 0" FontSize="16" Height="25"></Button>
                <Button Command="{Binding CommandStandAdd}" Content="添加" Width="80"  FontSize="16" Height="25"></Button>
                <Button Click="Button_Click" Content="删除" Width="80" Margin="10 0 10 0" FontSize="16" Height="25"></Button>

            </StackPanel>



        </Grid>

    </Grid>

</Window>
