<Window x:Class="空载负载.TableUtilityRecordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:空载负载"
        mc:Ignorable="d"
        WindowState="Maximized"        
        Title="TableUtilityRecordDialog" Height="600" Width="800">
    <Grid>
        <Grid ShowGridLines="True" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Background="#2263B3" Grid.Row="0">
                <TextBlock Text="工频耐压记录报告" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <DataGrid x:Name="dataGrid" 
        RowEditEnding="dataGrid_RowEditEnding"                                             
        AutoGenerateColumns="False"
        CanUserAddRows="False"
        CanUserDeleteRows="False"
        FontSize="16"                
        Grid.Row="1">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="记录日期" Binding="{Binding ReportcheckStartTime}" />
                    <DataGridTextColumn Header="出厂编号" Binding="{Binding ProductNumber}" />
                    <DataGridTextColumn Header="规格型号" Binding="{Binding ProductType}" />
                    <DataGridTextColumn Header="图号" Binding="{Binding ProductTuhao}" />
                    <DataGridTextColumn Header="额定容量(kVA)" Binding="{Binding ProductCapacity}" />
                    <DataGridTextColumn Header="高压侧电压(kV)" Binding="{Binding Highpressure}" />
                    <DataGridTextColumn Header="高压侧电流(A)" Binding="{Binding Highcurrent}" />
                    <DataGridTextColumn Header="低压侧电压(kV)" Binding="{Binding Lowpressure}" />
                    <DataGridTextColumn Header="低压侧电流(A)" Binding="{Binding Lowcurrent}" />
                    <DataGridTextColumn Header="相数" Binding="{Binding PhaseNumber}" />

                    <DataGridTextColumn Header="电压(kV)" Binding="{Binding Voltage}" />
                    
                    <DataGridTextColumn Header="频率(V)" Binding="{Binding Frequency}"  Visibility="Hidden"/>
                    
                    <DataGridTextColumn Header="时间(s)" Binding="{Binding Times}" />
                    <DataGridTextColumn Header="合格判断" Binding="{Binding Qualified}" />

                </DataGrid.Columns>
            </DataGrid>

            <Border Background="#2263B3" Grid.Row="2">
                <TextBlock Text="操作" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <Grid Grid.Row="3" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                    <TextBlock Text="文件名:"  Margin="10 0 5 0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    <TextBox  x:Name="TB1" MaxLength="10" Width="100" Height="25" FontSize="16" Margin="10 0 20 0" ></TextBox>
                    <Button Grid.Row ="0" Width="80" Height="30" Content="导出" FontSize="16" Margin="0 0 15 0" Click="Button_Click_Save_Word" ></Button>
                </StackPanel>

                <StackPanel  Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" >
                    <TextBlock  FontSize="16" Width="80" Height="30" Margin="10 0 10 0" Text="按类型查询" VerticalAlignment="Center"></TextBlock>
                    <TextBox FontSize="16" Width="150" Height="30" Margin="10 0 10 0" Text="{Binding Search}" VerticalAlignment="Center" ></TextBox>
                    <Button FontSize="16" Width="80" Height="30" Margin="10 0 10 0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="QueryButton_Click" Content="查询"></Button>
                    <Button FontSize="16" Width="80" Height="30" Margin="10 0 10 0" Content="删除" Click="Button_Click_Delete"></Button>
                </StackPanel>


            </Grid>


        </Grid>

    </Grid>
</Window>
