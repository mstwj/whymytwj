<Window x:Class="空载负载.TableStandardInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:空载负载"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="" Height="600" Width="800">
    <Grid>
        <Grid ShowGridLines="True" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Background="#2263B3" Grid.Row="0">
                <TextBlock Text="空载标准库" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <DataGrid x:Name="dataGrid" RowEditEnding="dataGrid_RowEditEnding"                                             
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                      FontSize="15"
                Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="规格型号" Binding="{Binding ProductType}" />
                    <DataGridTextColumn Header="图号" Binding="{Binding ProductTuhao}" />
                    <DataGridTextColumn Header="空载损耗标准(kW)" Binding="{Binding ProductStandard}" />
                    <DataGridTextColumn Header="空载损耗上限(%)" Binding="{Binding ProductStandardUpperimit}" />
                    <DataGridTextColumn Header="空载损耗下限(%)" Binding="{Binding ProductStandardDownimit}" />
                    <DataGridTextColumn Header="空载电流(%)标准" Binding="{Binding ProductCurrentStandard}" />
                    <DataGridTextColumn Header="空载电流上限(%)" Binding="{Binding ProductCurrentStandardUpperrimit}" />
                    <DataGridTextColumn Header="空载电流下限(%)" Binding="{Binding ProductCurrentStandardDownimit}" />
               
                </DataGrid.Columns>
            </DataGrid>

            <Border Background="#2263B3" Grid.Row="2">
                <TextBlock Text="添加空载标准" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <Grid Grid.Row="3"  Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}" >

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel  Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="30 0 0 0" HorizontalAlignment="Left" >
                    <TextBlock FontSize="15" Margin="0 0 10 0" Text="规格型号"></TextBlock>
                    <TextBox FontSize="15" Margin="70 0 0 0" Width="170" Text="{Binding ProductType}"></TextBox>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 30 0" HorizontalAlignment="Left">
                    <TextBlock Margin="30 0 0 0" FontSize="15" Text="图 号"></TextBlock>
                    <TextBox FontSize="15" Margin="120 0 0 0" Width="170" Text="{Binding ProductTuhao}"></TextBox>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 30 0" HorizontalAlignment="Left">
                    <TextBlock  Margin="25 0 0 0" FontSize="15" Text="空载损耗标准(kW)"></TextBlock>
                    <TextBox Margin="30 0 0 0" FontSize="15" Width="170" Text="{Binding ProductStandard}"></TextBox>

                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 30 0" HorizontalAlignment="Left">
                    <TextBlock  Margin="30 0 0 0" FontSize="15" Text="空载损耗上限(%)"></TextBlock>
                    <TextBox FontSize="15" Margin="40 0 0 0" Width="170" Text="{Binding ProductStandardUp}"></TextBox>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="30 0 30 0" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock FontSize="15" Text="空载损耗下限(%)"/>
                    <TextBox FontSize="15" Width="170" Margin="40 0 0 0" Text="{Binding ProductStandardDown}"/>
                    
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal"  VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock FontSize="15" Text="空载电流标准值(%)" Margin="25 0 10 0"/>
                    <TextBox FontSize="15" Margin="10 0 0 0" Width="170" Text="{Binding ProductCurrentStandard}"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0 0 30 0" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock FontSize="15" Text="空载电流上限(%)" Margin="30 0 0 0"/>
                    <TextBox FontSize="15" Width="170" Margin="40 0 0 0" Text="{Binding ProductCurrentStandardUp}"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0 0 30 0" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock FontSize="15" Text="空载电流下限(%)" Margin="30 0 0 0"/>
                    <TextBox FontSize="15" Width="170" Margin="40 0 0 0" Text="{Binding ProductCurrentStandardDown}"/>
                </StackPanel>

            </Grid>

            <StackPanel Grid.Row="4" Grid.Column="0" Height="40" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Label Content="按规格型号" FontSize="16" VerticalAlignment="Center" ></Label>
                <TextBox Text="{Binding SelectXinhao}" Width="200" FontSize="16"  Height="25" ></TextBox>
                <Button Click="QueryButton_Click" Content="查询" Width="80" Margin="10 0 10 0" FontSize="16" Height="25"></Button>
                <Button Command="{Binding CommandStandAdd}" Content="添加" Width="80"  FontSize="16" Height="25"></Button>
                <Button Click="Button_Click" Content="删除" Width="80" Margin="10 0 10 0" FontSize="16" Height="25"></Button>

            </StackPanel>



        </Grid>

    </Grid>
</Window>
