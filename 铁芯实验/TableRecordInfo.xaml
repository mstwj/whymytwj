<Window x:Class="铁芯实验.TableRecordInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:铁芯实验"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="" Height="600" Width="800">
    <Grid>
        <Grid ShowGridLines="True" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Background="#2263B3" Grid.Row="0">
                <TextBlock Text="记录报告" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <DataGrid x:Name="dataGrid" 
                RowEditEnding="dataGrid_RowEditEnding"                                             
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                FontSize="16"                
                Grid.Row="1">
                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="记录日期" Binding="{Binding ReportcheckStartTime}" />
                    <DataGridTextColumn Header="出厂编号" Binding="{Binding ProductNumber}" />
                    <DataGridTextColumn Header="规格型号" Binding="{Binding ProductType}" />
                    <DataGridTextColumn Header="图号" Binding="{Binding ProductTuhao}" />
                    <DataGridTextColumn Header="额定容量(kVA)" Binding="{Binding ProductCapacity}" />
                    <DataGridTextColumn Header="额定电压(kV)" Binding="{Binding RatedVoltage}" />
                    <DataGridTextColumn Header="相数" Binding="{Binding PhaseNumber}" />
                    <DataGridTextColumn Header="三相电压平均值(V)" Binding="{Binding ATPVoltage}" />
                    <DataGridTextColumn Header="三相电压有效值(V)" Binding="{Binding RMSvalue}" />
                    <DataGridTextColumn Header="三相电流有效值(A)" Binding="{Binding IRMSvalue}" />
                    <DataGridTextColumn Header="空载电流(A)" Binding="{Binding NoloadCurrent}" />
                    <DataGridTextColumn Header="空载电流百分比(%)" Binding="{Binding PercentageNoloadCurrent}" />
                    <DataGridTextColumn Header="空载损耗(W)" Binding="{Binding NoloadLoss}" />
                    <DataGridTextColumn Header="合格判断" Binding="{Binding QualifiedJudgment}" />

                </DataGrid.Columns>
            </DataGrid>

            <Border Background="#2263B3" Grid.Row="2">
                <TextBlock Text="操作" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <Grid Grid.Row="3" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" >
                    <TextBlock Text="文件名:"  Margin="10 0 5 0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    <TextBox  x:Name="TB1" MaxLength="10" Width="100" Height="25" FontSize="16" Margin="10 0 20 0" ></TextBox>
                    <Button Grid.Row ="0" Width="80" Height="30" Content="导出" FontSize="16" Margin="0 0 15 0" Click="Button_Click_Save_Word" ></Button>
                </StackPanel>

                <StackPanel  Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" >
                    <!--
                    <Label Content="按规格型号" FontSize="16" VerticalAlignment="Center" Margin="10"></Label>
                    <TextBox Text="{Binding SelectXinhao}" Width="150" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" Margin="10"></TextBox>
                    -->
                    <Button FontSize="16" Width="80" Height="30" Margin="10 0 10 0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="QueryButton_Click" Content="查询"></Button>
                    <Button FontSize="16" Width="80" Height="30" Margin="10 0 10 0" Content="删除" Click="Button_Click_Delete"></Button>
                </StackPanel>
                
                
                <!--
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Height="55">
                    <TextBlock  Text="文件名:" Margin="10 0 5 0" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    <TextBox x:Name="TB2" MaxLength="10" Width="100" Height="20" FontSize="16" Margin="10 0 20 0" ></TextBox>
                    <Button Grid.Row ="0" Width="170" Height="35" Content="导出为WORD格式" FontSize="16" Margin="0 0 15 0" Click="Button_Click_Save_Word" ></Button>
                </StackPanel>
                -->
                <!--
                <Grid Grid.Column="0" x:Name="GridTJ">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition ></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Button Grid.Row ="0" Content="导出为WORD格式" Margin="10" Click="Button_Click_Save_Word" ></Button>
                    <Button Grid.Row ="1" Content="导出为TXT文本格式"   Margin="10" Click="Button_Click_Save_Text" ></Button>

                </Grid>

                <Grid Grid.Column="2">
                    <TextBlock Name="multiLineTextBlock"
                    TextWrapping="Wrap"
                    FontSize="16"
                    Width="150"  
                    Margin="15"
                    Foreground="Red"
                    Text="导出数据说明 &#x0D; 1：必须先勾选需要导出的数据项,勾选哪项导出哪个项目。&#x0D;  2：点击上方表格，选择一条需要导出的记录。  &#x0D;  3：点击导出按钮，可以选择导出TXT或者WORD，就可以导出数据" />
                </Grid>
            -->
            </Grid>
                

        </Grid>

    </Grid>
</Window>
