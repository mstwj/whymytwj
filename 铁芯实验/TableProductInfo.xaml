<Window x:Class="铁芯实验.TableProductInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:铁芯实验"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="" Height="600" Width="800">
    
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>

        </Grid.RowDefinitions>

        <Border Background="#2263B3" Grid.Row="0">
            <TextBlock Text="产品表" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
        </Border>

        <DataGrid x:Name="dataGrid" RowEditEnding="dataGrid_RowEditEnding"                                             
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            FontSize="16"
            Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="出厂编号" Binding="{Binding ProductNumber}" />
                <DataGridTextColumn Header="规格型号" Binding="{Binding ProductType}" />
                <DataGridTextColumn Header="图号" Binding="{Binding ProductTuhao}" />
                <DataGridTextColumn Header="额定容量(kVA)" Binding="{Binding ProductCapacity}" />
                <DataGridTextColumn Header="额定电压(V)" Binding="{Binding RatedVoltage}" />
                <DataGridTextColumn Header="相数" Binding="{Binding PhaseNumber}" />
        
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <!--
            <Label Content="按规格型号" FontSize="16" VerticalAlignment="Center" Margin="10"></Label>
            <TextBox Text="{Binding SelectXinhao}" Width="250" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" Margin="10"></TextBox>
            -->
            <Button FontSize="16" Width="100" Height="40" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Right" Click="QueryButton_Click" Content="查询"></Button>
            <Button FontSize="16" Width="100" Height="40" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Right" Click="Button_Click_Delete" Content="删除"></Button>
        </StackPanel>
    </Grid>
</Window>
