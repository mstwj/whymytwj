<Window x:Class="铁芯实验.QueryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:铁芯实验"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="查询" Height="160" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="按" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Margin="10 0 10 0"></Label>
            <ComboBox  Width="150" Height="25" FontSize="16" ItemsSource="{Binding QueryCBoxData}"  SelectedIndex="{Binding QueryCBoxIntSelect}" ></ComboBox>
            <Label Content="查询" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Margin="10 0 10 0"></Label>

        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
            <TextBox x:Name="TboxEdit" Height="25" Width="150" Margin="10 0 20 0" FontSize="16"></TextBox>
            <Button Content="确定" Click="Button_Click" FontSize="16" Width="70" Height="30" Margin="0 0 20 0"></Button>
            
        </StackPanel>
        
    </Grid>
</Window>
