<Window x:Class="铁芯实验.BaseParamSet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:铁芯实验"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"     
        Title="BaseParamSet" Height="230" Width="300">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Background="#FFE2E2E2" Grid.Row="0" >

            <GroupBox Background="#FFE2E2E2" Margin="10" BorderThickness="2" BorderBrush="Black"  Header="标准参数录入" FontSize="16">

                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="18" />
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock  Text="额定匝数"  Margin="10 0 10 0" ></TextBlock>
                        <TextBox Width="100" Text="{Binding Data1 }"></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                        <TextBlock Text="临时匝数"  Margin="10 0 10 0" ></TextBlock>
                        <TextBox Width="100" Text="{Binding Data2 }"></TextBox>
                    </StackPanel>

                </Grid>
            </GroupBox>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button  Content="保存配置" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Command="{Binding BtnCommandSave}"></Button>
            <Button  Content="退出配置" FontSize="15" Height="35" Width="80" Margin="10 0 0 0" Click="Button_Click_Quit"></Button>
        </StackPanel>
    </Grid>
</Window>
