<Window x:Class="直租变比.AddProc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:直租变比"
        mc:Ignorable="d"
        Title="AddProc" Height="450" Width="800">
    <Grid> 
        <Grid ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Border Background="#2263B3" Grid.Row="0">
                <TextBlock Text="产品信息" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <Border Background="#FFE2E2E2" Grid.Row="1" Margin="-1,0,1,0">
                <Grid x:Name="GridTJ" >
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>


                    <ComboBox IsEditable="True" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left"  Width="150" Height="20"  Margin="5,0,0,0" SelectedItem="{Binding m_AddModeProc.YanPingBianhao }" ItemsSource="{Binding ComboBoxYanPingBianhao}"  Text="{Binding m_AddModeProc.YanPingBianhao}" SelectionChanged="ComboBox_SelectionChanged" />

                    <TextBlock Text="样品编号"      Grid.Row="0" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock Text="规格型号"      Grid.Row="1" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock Text="图号"          Grid.Row="2" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock Text="变压器相数"    Grid.Row="3" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock Text="变压器绕组数"  Grid.Row="4" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBlock Text="高压侧绕组数"  Grid.Row="5" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBlock Text="低压侧绕组数"  Grid.Row="6" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right" />
                    <TextBlock Text="档位数"        Grid.Row="7"  Grid.Column="0" Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right" />


                    <TextBox  x:Name="TextGuigeXinhao" Grid.Row="1" Grid.Column="1" Text="{Binding m_AddModeProc.GuigeXinhao }" Margin="5" Height="20"  Width="150"  HorizontalAlignment="Left" ></TextBox>
                    <TextBox  x:Name="TextTuhao" Grid.Row="2" Grid.Column="1" Text="{Binding m_AddModeProc.Tuhao }" Margin="5" Height="20"  Width="150"  HorizontalAlignment="Left" ></TextBox>
                    <ComboBox Grid.Row="3" Grid.Column="1" Margin="10" Height="20" Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxXiangShu }" SelectedItem="{Binding m_AddModeProc.XiangShu }" />
                    <ComboBox Grid.Row="4" Grid.Column="1" Margin="10" Height="20" Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxLaozhu}" SelectedItem="{Binding m_AddModeProc.Laozhu }"/>
                    <TextBox  x:Name="TextGaoYaLaozhu" Grid.Row="5" Grid.Column="1" Text="{Binding m_AddModeProc.GaoYaLaozhu }" Margin="5" Height="20"  Width="150" HorizontalAlignment="Left" ></TextBox>
                    <TextBox  x:Name="TextDiYaLaozhu" Grid.Row="6" Grid.Column="1" Text="{Binding m_AddModeProc.DiYaLaozhu }" Margin="6,10,0,12" Height="20"  Width="150" HorizontalAlignment="Left" ></TextBox>
                    <TextBox  x:Name="TextDanWei" Grid.Row="7" Grid.Column="1" Text="{Binding m_AddModeProc.DanWei }" Margin="6,10,0,12" Height="20"  Width="150" HorizontalAlignment="Left" ></TextBox>

                    <TextBlock Text="线圈导线材质"   Grid.Row="0" Grid.Column="2"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right" />
                    <TextBlock Text="额定容量KW"     Grid.Row="1" Grid.Column="2" Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBlock Text="调压比例%"      Grid.Row="2" Grid.Column="2" Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBlock Text="高压额定电压KV" Grid.Row="3" Grid.Column="2" Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBlock Text="低压额定电压V" Grid.Row="4" Grid.Column="2" Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBlock Text="连接组标号"     Grid.Row="5" Grid.Column="2" Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock Text="组号"           Grid.Row="6" Grid.Column="2" Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>


                    <ComboBox  Grid.Row="0" Grid.Column="3" Margin="10" Height="20"  Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxCaiZhi  }" SelectedItem="{Binding m_AddModeProc.CaiZhi }"/>
                    <TextBox  x:Name="TextEDingLongLiang" Text="{Binding m_AddModeProc.EDingLongLiang }" Grid.Row="1" Grid.Column="3"  Margin="10" Height="20"  Width="150" HorizontalAlignment="Left"></TextBox>
                    <TextBox  x:Name="TextTiaoYaBili" Text="{Binding m_AddModeProc.TiaoYaBili }" Grid.Row="2" Grid.Column="3"  Margin="10" Height="20"  Width="150" HorizontalAlignment="Left"></TextBox>
                    <TextBox x:Name="TextGaoYaEDingDianYa" Text="{Binding m_AddModeProc.GaoYaEDingDianYa }" Grid.Row="3" Grid.Column="3"  Margin="10" Height="20"  Width="150" HorizontalAlignment="Left"></TextBox>
                    <TextBox x:Name="TextDiYaEDingDianYa" Text="{Binding m_AddModeProc.DiYaEDingDianYa }" Grid.Row="4" Grid.Column="3"  Margin="10" Height="20"  Width="150" HorizontalAlignment="Left"></TextBox>
                    <ComboBox  Grid.Row="5" Grid.Column="3" Margin="10" Height="20" Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxBiaoHao }" SelectedItem="{Binding m_AddModeProc.BiaoHao  }"/>
                    <ComboBox  Grid.Row="6" Grid.Column="3" Margin="10" Height="20" Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxZhuHao  }" SelectedItem="{Binding m_AddModeProc.ZhuHao  }"/>

                </Grid>

            </Border>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                <Button  Content="配置完成" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Click="ClickCommand1" ></Button>
                <Button  Content="退出配置" FontSize="15" Height="35" Width="80" Margin="10 0 0 0"  Click="ClickCommand2"></Button>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
