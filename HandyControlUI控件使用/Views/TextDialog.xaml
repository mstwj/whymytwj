<UserControl x:Class="HandyControlUI控件使用.Views.TextDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HandyControlUI控件使用.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol" 
             mc:Ignorable="d" 
             Height="300" Width="400" Background="{StaticResource BackgroundBrush}">
    <Grid>
        <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="Please Wait...."></TextBlock>
        <Button Style="{StaticResource ButtonIcon}" Command="hc:ControlCommands.Close"
                Foreground="{StaticResource PrimaryBrush}" hc:IconElement.Geometry="{StaticResource ErrorGeometry}" 
                Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,4,0"></Button>
    </Grid>
</UserControl>
