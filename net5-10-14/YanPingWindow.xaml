<Window x:Class="net5_10_14.YanPingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:net5_10_14"
        xmlns:input="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
        mc:Ignorable="d"
                WindowStartupLocation="CenterScreen"
        Title="YanPingWindow" Height="500" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="ErrorTemplate">
            <DockPanel>
                <TextBlock Foreground="Red" FontSize="12" DockPanel.Dock="Top" 
                        Text="{Binding ElementName=customAdorner, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"/>
                <Border BorderBrush="Red" BorderThickness="1">
                    <AdornedElementPlaceholder Name="customAdorner" />
                </Border>
            </DockPanel>
        </ControlTemplate>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0 0 0 0"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="547*"/>
            <ColumnDefinition Width="253*"/>
        </Grid.ColumnDefinitions>
        <Grid ShowGridLines="True" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Background="#2263B3" Grid.Row="0">
                <TextBlock Text="样品配置" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>


            <Border Background="#FFE2E2E2" Grid.Row="1" Margin="-1,0,1,0">
                <Grid x:Name="GridTJ" >
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <input:AutoCompleteBox Name="autoCompleteBox" Margin="5,0,0,0" VerticalAlignment="Center"                                            
                               HorizontalAlignment="Left"
                               Grid.Column="1"
                               Grid.Row="0"
                               Width="150" Height="20"                               
                               ItemsSource="{Binding Items}"
                               IsTextCompletionEnabled="True"
                               KeyDown="AutoCompleteBox_KeyDown"
                               />

                    <TextBlock Text="样品编号"      Grid.Row="0" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock Text="规格型号"      Grid.Row="1" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock Text="图号"          Grid.Row="2" Grid.Column="0"  Margin="10"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBlock Text="变压器相数"    Grid.Row="3" Grid.Column="0"  Margin="118,0,0,0"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                    <TextBlock Text="变压器绕组数"  Grid.Row="4" Grid.Column="0"  Margin="103,10,0,0"  FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock Text="高压侧绕组数"  Grid.Row="5" Grid.Column="0"  Margin="103,10,0,0"  FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock Text="低压侧绕组数"  Grid.Row="6" Grid.Column="0"  Margin="104,9,0,0"  FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBlock Text="档位数"        Grid.Row="7"  Grid.Column="0" Margin="104,9,0,0"  FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" />


                    <TextBox x:Name="TextBoxProType" Grid.Row="1" Grid.Column="1" Text="{Binding Data2}" KeyDown="TextBoxProType_KeyDown"  Margin="5" Height="20"  Width="150"  HorizontalAlignment="Left" ></TextBox>
                    <TextBox x:Name="TextBoxTuhao"   Grid.Row="2" Grid.Column="1" Text="{Binding Data3}" KeyDown="TextBoxTuhao_KeyDown"   Margin="5" Height="20"  Width="150"  HorizontalAlignment="Left" ></TextBox>
                    <ComboBox                        Grid.Row="3" Grid.Column="1" Margin="8,12,0,10" Height="20" Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxItems1}" SelectedItem="{Binding SelectBoxItems1}"></ComboBox>
                    <ComboBox                        Grid.Row="4" Grid.Column="1" Margin="8,11,0,11" Height="20" Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxItems2}" SelectedItem="{Binding SelectBoxItems2}"/>
                    <TextBox  x:Name="TextBox1"      Grid.Row="5" Grid.Column="1" Text="{Binding Data12}" Margin="5" Height="20"  Width="150" HorizontalAlignment="Left" ></TextBox>
                    <TextBox  x:Name="TextBox2"      Grid.Row="6" Grid.Column="1" Text="{Binding Data13}" Margin="6,10,0,12" Height="20"  Width="150" HorizontalAlignment="Left" ></TextBox>
                    <TextBox  x:Name="TextBox3"      Grid.Row="7" Grid.Column="1" Text="{Binding Data14}" Margin="6,10,0,12" Height="20"  Width="150" HorizontalAlignment="Left" ></TextBox>

                    <TextBlock Text="线圈导线材质"   Grid.Row="0" Grid.Column="2"  Margin="103,13,0,0"  FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" />
                    <TextBlock Text="额定容量KW"     Grid.Row="1" Grid.Column="2" Margin="103,16,0,0"  FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock Text="调压比例%"      Grid.Row="2" Grid.Column="2" Margin="115,0,0,0"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <TextBlock Text="高压额定电压KV" Grid.Row="3" Grid.Column="2" Margin="76,0,0,0"  FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <TextBlock Text="低压额定电压V" Grid.Row="4" Grid.Column="2" Margin="77,11,0,0"  FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <TextBlock Text="连接组标号"     Grid.Row="5" Grid.Column="2" Margin="103,9,0,0"  FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>
                    <TextBlock Text="组号"           Grid.Row="6" Grid.Column="2" Margin="103,9,0,0"  FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left"></TextBlock>


                    <ComboBox                        Grid.Row="0" Grid.Column="3" Margin="8,14,0,8" Height="20"  Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxItems3}" SelectedItem="{Binding SelectBoxItems3}"/>
                    <TextBox x:Name="TextBox4" Text="{Binding Data4}"  Grid.Row="1" Grid.Column="3"  Margin="7,12,0,10" Height="20"  Width="150" HorizontalAlignment="Left"   ></TextBox>
                    <TextBox x:Name="TextBox5" Text="{Binding Data5}"  Grid.Row="2" Grid.Column="3"  Margin="7,11,0,11" Height="20"  Width="150" HorizontalAlignment="Left"   ></TextBox>
                    <TextBox x:Name="TextBox6" Text="{Binding Data6}"  Grid.Row="3" Grid.Column="3"  Margin="8,11,0,11" Height="20"  Width="150" HorizontalAlignment="Left" ></TextBox>
                    <TextBox x:Name="TextBox7" Text="{Binding Data10}" Grid.Row="4" Grid.Column="3"  Margin="8,14,0,17" Height="20"  Width="150" HorizontalAlignment="Left"></TextBox>
                    <ComboBox                        Grid.Row="5" Grid.Column="3" Margin="8,11,0,11" Height="20" Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxItems4}" SelectedItem="{Binding SelectBoxItems4}"/>
                    <ComboBox                        Grid.Row="6" Grid.Column="3" Margin="8,11,0,11" Height="20" Width="150"  HorizontalAlignment="Left" ItemsSource="{Binding ComboBoxItems5}" SelectedItem="{Binding SelectBoxItems5}"/>

                </Grid>

            </Border>

            <Border Background="#2263B3" Grid.Row="2" >
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button  Content="配置完成" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Command="{Binding btnCommand1}"></Button>
                    <Button  Content="退出" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Command="{Binding btnCommand2}"></Button>
                </StackPanel>

            </Border>
        </Grid>

    </Grid>

</Window>
