                <Grid Grid.Column="0">
                    <Button Content="自动" Command="{Binding BtnCommandSendAuto}" CommandParameter="{Binding RelativeSource={RelativeSource Self}}"  Width="80" Grid.Row="1" Height="70" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" ></Button>
                </Grid>

                <Grid Grid.Column="1">
                    <TextBlock Text="本设备软件德威电子研发设计" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Text="分接位置" FontSize="16" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock x:Name="TBWZ" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" ></TextBlock>
                </Grid>

                <ListBox Grid.Column="3" ItemsSource="{Binding ListBoxData}" Background="GreenYellow" FontSize="15" />

                <StackPanel Grid.Column="4" VerticalAlignment="Center">
                    <Image Source="{Binding ImageSource1 }" Margin="0 2 0 0" Height="30" Width="30" />
                    <TextBlock Text="设备状态" FontSize="16" HorizontalAlignment="Center" Margin="10"></TextBlock>
                </StackPanel>


            </Grid>
        </Grid>


        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="Blue" >
                    <TextBlock Text="样品信息" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFF1E9E9"></TextBlock>
                </Border>

                <TextBlock Grid.Column="0" Grid.Row="1" Text="编号:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="型号:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="图号:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="4" Text="标号:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="5" Text="高压:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="6" Text="容量:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="7" Text="低压:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="8" Text="档数:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>

                <TextBlock x:Name="TB1" Grid.Column="1" Grid.Row="1" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB2" Grid.Column="1" Grid.Row="2" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB3" Grid.Column="1" Grid.Row="3" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB4" Grid.Column="1" Grid.Row="4" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB5" Grid.Column="1" Grid.Row="5" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB6" Grid.Column="1" Grid.Row="6" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB7" Grid.Column="1" Grid.Row="7" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB8" Grid.Column="1" Grid.Row="8" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>

            </Grid>

            <Grid  Grid.Row="1" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="Blue" >
                    <TextBlock Text="样品合格标准" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFF1E9E9"></TextBlock>
                </Border>

                <TextBlock Grid.Column="0" Grid.Row="1" Text="型号:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="图号:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="误差:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="4" Text="创人:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>
                <TextBlock Grid.Column="0" Grid.Row="5" Text="创时:" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="15" HorizontalAlignment="Right"></TextBlock>

                <TextBlock x:Name="TB9" Grid.Column="1" Grid.Row="1" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB10"  Grid.Column="1" Grid.Row="2" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB11" Grid.Column="1" Grid.Row="3" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB12" Grid.Column="1" Grid.Row="4" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
                <TextBlock x:Name="TB13" Grid.Column="1" Grid.Row="5" Width="80" Height="19" Margin="0 0 10 0" VerticalAlignment="Center" FontSize="13" HorizontalAlignment="Left"></TextBlock>
            </Grid>
        </Grid>





    </Grid>

</Page>
