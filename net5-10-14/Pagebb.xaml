<Page x:Class="net5_10_14.Pagebb"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:net5_10_14" xmlns:viewmodel="clr-namespace:net5_10_14.ViewModel" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pagebb">

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Background="#2263B3" Grid.Row="0" Grid.Column="0">
                <TextBlock Text="变比实验" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" ShowGridLines="True" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrush}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="53"></ColumnDefinition>
                        <ColumnDefinition Width="1.14*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="1.5*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="额定值" Grid.Column="1" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Text="测量值" Grid.Column="2" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock Text="误差值" Grid.Column="3" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                    
                </Grid>
                
                
                <DataGrid x:Name="dataGrid" Grid.Row="1"                                        
                          FontSize="13"
                          CanUserResizeRows="False"
                          CanUserResizeColumns="False"
                          IsReadOnly="True"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="True"                      
                          CanUserAddRows="False"
                          SelectionUnit="FullRow"
                          CanUserDeleteRows="False"
                          TextBlock.TextAlignment="Center" 
                          SelectedItem="{Binding SelectedDataRecord}"                                            
                          AutoGenerateColumns="False"  BorderThickness="1" SelectedIndex="0" 
                          SelectionChanged="dataGrid_Selected"
                          >
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="分接" Width="0.8*" IsReadOnly="True"      Binding="{Binding Id , UpdateSourceTrigger=PropertyChanged}" />
                        <DataGridTextColumn Header="高压侧" Width="*" IsReadOnly="True"    Binding="{Binding Datagaoyache, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGridTextColumn Header="低压侧" Width="*" IsReadOnly="True"    Binding="{Binding Datadiyache, UpdateSourceTrigger=PropertyChanged}" />
                        <DataGridTextColumn Header="标准变比" Width="1.4*" IsReadOnly="True"  Binding="{Binding Dataelbb, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="AB/ab" Width="*" IsReadOnly="True"     Binding="{Binding DataKAB , UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="BC/bc" Width="*" IsReadOnly="True"     Binding="{Binding DataKBC , UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="CA/ca" Width="*" IsReadOnly="True"     Binding="{Binding DataKCA, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Ab/ab误差" Width="1.5*" IsReadOnly="True" Binding="{Binding DataEAB , UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="BC/bc误差" Width="1.5*" IsReadOnly="True" Binding="{Binding DataEBC , UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="CA/ca误差" Width="1.5*" IsReadOnly="True" Binding="{Binding DataECA , UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="接法" Width="0.8*" IsReadOnly="True"      Binding="{Binding Datazbfs , UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="组别" Width="0.8*" IsReadOnly="True"      Binding="{Binding Datadqfj , UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="合格判断" Width="1.4*" IsReadOnly="True"  Binding="{Binding DataHGPD, UpdateSourceTrigger=PropertyChanged}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Border Background="#2263B3" Grid.Row="2" Grid.Column="0">
                <TextBlock Text="操作台" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <Grid Grid.Row="3" Background="White" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!--

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Command="{Binding BtnCommandOpenprot}" Content="打开" Visibility="Hidden" Width="50" Grid.Row="0" Height="30"></Button>
                    <Button Command="{Binding BtnCommandCloseprot}"  Content="关闭" Visibility="Hidden" Width="50" Grid.Row="1" Height="30"></Button>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Command="{Binding BtnCommandSendHand}" Content="联机" Visibility="Hidden" Width="50" Grid.Row="0" Height="30"></Button>
                    <Button Command="{Binding BtnCommandSendStart}"  Content="启动" Visibility="Hidden" Width="50" Grid.Row="1" Height="30"></Button>
                </Grid>

                
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Command="{Binding BtnCommandSendStop}" Visibility="Hidden" Content="停止" Width="50" Grid.Row="0" Height="30"></Button>
                    <Button Command="{Binding BtnCommandSendRead}" Visibility="Hidden" Content="读取" Width="50" Grid.Row="1" Height="30"></Button>
                </Grid>


                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Button Content="报告" Command="{Binding BtnCommandSaveReport}" Width="50" Grid.Row="0" Height="30"></Button>
                    <Button Content="自动" Command="{Binding BtnCommandSendAuto}" Width="50" Grid.Row="1" Height="30"></Button>
                </Grid>
                
                <Grid Grid.Column="2">
                    <Button Content="报告" Command="{Binding BtnCommandSaveReport}" Width="50" Grid.Row="0" Height="30"></Button>

