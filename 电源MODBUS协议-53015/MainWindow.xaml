<Window x:Class="电源MODBUS协议_53015.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:电源MODBUS协议_53015"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">

    <Window.Resources>
        <Storyboard x:Key="AlarmAnimation">
            <ColorAnimation Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" 
                            From="Red" To="Blue" Duration="0:0:0.3" AutoReverse="False" RepeatBehavior="Forever"/>
        </Storyboard>
    </Window.Resources>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel>
                <ComboBox SelectedItem="{Binding mySelectItem}" ItemsSource="{Binding ComboBoxItems}" Width="80" Height="30" Margin="10"></ComboBox>
                <Button Width="50" Height="30">确定</Button>
            </DockPanel>


            <Rectangle Grid.Column="1" Width="100" Height="100">
                <Rectangle.Fill>
                    <SolidColorBrush Color="Red"/>
                </Rectangle.Fill>
                <Rectangle.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource AlarmAnimation}"/>
                    </EventTrigger>
                </Rectangle.Triggers>
            </Rectangle>


        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0">
                <WrapPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="电源工作状态" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>    
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="输出频率Hz" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data2}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="A相输出电压" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data3}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="B相输出电压" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data4}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="C相输出电压" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data5}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="A相输出电流" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data6}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="B相输出电流" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="C相输出电流" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="C相输出电流" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="C相输出电流" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="C相输出电流" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="高低档状态" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="设置频率" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="设置A电压" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="设置B电压" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="设置C电压" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="设置三相电压" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock Text="控制命令" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        <TextBox IsReadOnly="True" Text="{Binding Data1}" FontSize="15" Margin="10" Height="40" Width="100"/>
                    </StackPanel>
                </WrapPanel>
            </Grid>


            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <ListBox Name="myListBox"  ItemsSource="{Binding ListBoxData}" Grid.Row="1" FontSize="15" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Blue"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRed}" Value="True">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.Text>
                                    <Binding Path="Text"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
        
        
    </Grid>
</Window>
