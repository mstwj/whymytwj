<Window x:Class="PLCNET5电容塔升级.Step1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLCNET5电容塔升级"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF148077"
        Title="系统开关投切方案" Height="400" Width="460" Closing="myClosing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="72*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <TextBlock Text="补偿相数" Width="250" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <ComboBox x:Name="CComboxName1" SelectedIndex="{Binding BtnComBoxListBCXSIndex}" ItemsSource="{Binding BtnComBoxListBCXS}" Width="150" FontSize="15"></ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <TextBlock Text="预估试验电流设置" Width="250" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <TextBox Width="100" FontSize="15" Text="{Binding EstimatedCurrent}"></TextBox>
            <TextBlock Text="A" Width="50" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <TextBlock Text="预估试验电压设置" Width="250" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <TextBox Width="100" FontSize="15" Text="{Binding EstimatedVoltage}"></TextBox>
            <TextBlock Text="KV" Width="50" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <TextBlock Text="推算最佳组合方式" Width="250" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <Button Width="60" Command="{Binding BtnCommandExeBCXS}" FontSize="15" Content="确认" Margin="0 0 0 0"></Button>
        </StackPanel>


        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <TextBlock Text="选择接法" Width="250" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <ComboBox SelectedIndex="{Binding BtnComBoxListUserXZJFIndex}" SelectionChanged="ComboBox_Selected" ItemsSource="{Binding BtnComBoxListUserXZJF}" Width="150" FontSize="15"></ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <TextBlock Text="选择串并联方式" Width="250" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <ComboBox SelectedIndex="{Binding BtnComBoxListUserBLFSIndex}" ItemsSource="{Binding BtnComBoxListUserBLFS}" SelectionChanged="ComboBox_SelectedAndJs" Width="150" FontSize="15"></ComboBox>
        </StackPanel>

        <Border Grid.Row="6" Grid.ColumnSpan="2" Margin="0,0,0,38" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="接法" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="串联数" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="并联数" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="系统电压(KV)" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Text="每层建议投补个数" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"></TextBlock>

                <TextBox Background="Black" Foreground="Yellow" Width="50" Grid.Row="1" Grid.Column="0" Text="{Binding UserJF }" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"></TextBox>
                <TextBox Background="Black" Foreground="Yellow" Width="50" Grid.Row="1" Grid.Column="1" Text="{Binding UserCLS }" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"></TextBox>
                <TextBox Background="Black" Foreground="Yellow" Width="50" Grid.Row="1" Grid.Column="2" Text="{Binding UserBLS }" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"></TextBox>
                <TextBox Background="Black" Foreground="Yellow" Width="70" Grid.Row="1" Grid.Column="3" Text="{Binding UserXTDY }" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"></TextBox>
                <StackPanel Grid.Row="1" Grid.Column="4" Orientation="Horizontal" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBox Background="Black" Foreground="Yellow" Width="50"  Text="{Binding UserMCJYGS }"  FontSize="14"></TextBox>
                    <Button Content="计算" Command="{Binding BtnStarExeCount}" Width="50" Margin="10 0 10 0"></Button>

                </StackPanel>



            </Grid>

        </Border>


        <StackPanel Grid.Row="7" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <TextBlock Text="执行（开始按组合方式进行合闸）" Width="250" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <Button Width="60" Command="{Binding BtnCommandBtnExe}" FontSize="15" Content="确认" Margin="0 0 10 0"></Button>

            <Button Width="60" Command="{Binding BtnCommandBtnCansel}" FontSize="15" Content="取消" Margin="20 0 10 0"></Button>

        </StackPanel>

        <StackPanel Grid.Row="8" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2">
            <TextBlock Text="执行流程" Width="70" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <TextBox Background="Black" Text="{Binding Exerecord}" Foreground="Yellow" Width="340" FontSize="15"></TextBox>
        </StackPanel>


    </Grid>
</Window>
