<Window x:Class="PLCNET5电容塔升级.Step2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLCNET5电容塔升级"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF148077"
        Title="电容补偿" Height="400" Width="460" Closing="myClose">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="仿真界面(选择投入电容)" Width="350" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
        </StackPanel>

        <Border Grid.Row="1" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Orientation="Horizontal" Margin="5">
                    <CheckBox  Width="30" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_1_1" IsChecked="{Binding CheckBoxLevel_1_1}" Content="" Background="#FF00ADFF"/>
                    <TextBlock Width="50" Text="T1(0.25)" Margin="5 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Orientation="Horizontal" Margin="5">
                    <CheckBox  Width="30" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_1_2" IsChecked="{Binding CheckBoxLevel_1_2}" Content="" Background="#FF00ADFF"/>
                    <TextBlock Width="50"  Text="T2(0.5)" Margin="5 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" Orientation="Horizontal" Margin="5">
                    <CheckBox Width="30" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_1_3" IsChecked="{Binding CheckBoxLevel_1_3}" Content="" Background="#FF00ADFF"/>
                    <TextBlock Width="50" Text="T3(1)" Margin="5 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" Orientation="Horizontal" Margin="5">
                    <CheckBox Width="30" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_1_4" IsChecked="{Binding CheckBoxLevel_1_4}" Content="" Background="#FF00ADFF"/>
                    <TextBlock Width="50" Text="T4(2)" Margin="5 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" Orientation="Horizontal" Margin="5">
                    <CheckBox Width="30" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_1_5" IsChecked="{Binding CheckBoxLevel_1_5}" Content="" Background="#FF00ADFF"/>
                    <TextBlock Width="50" Text="T5(4)" Margin="5 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" Orientation="Horizontal" Margin="5">
                    <CheckBox Width="30" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_1_6" IsChecked="{Binding CheckBoxLevel_1_6}" Content="" Background="#FF00ADFF"/>
                    <TextBlock Width="50" Text="T6(8)" Margin="5 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                </StackPanel>

                <TextBlock Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="第1层"></TextBlock>


                <CheckBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_2_1" IsChecked="{Binding CheckBoxLevel_2_1}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_2_2" IsChecked="{Binding CheckBoxLevel_2_2}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_2_3" IsChecked="{Binding CheckBoxLevel_2_3}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_2_4" IsChecked="{Binding CheckBoxLevel_2_4}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_2_5" IsChecked="{Binding CheckBoxLevel_2_5}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="5" Grid.Column="1" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_2_6" IsChecked="{Binding CheckBoxLevel_2_6}" Content="" Background="#FF00ADFF"/>
                <TextBlock Grid.Row="6" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="第2层"></TextBlock>

                <CheckBox Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_3_1" IsChecked="{Binding CheckBoxLevel_3_1}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_3_2" IsChecked="{Binding CheckBoxLevel_3_2}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_3_3" IsChecked="{Binding CheckBoxLevel_3_3}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_3_4" IsChecked="{Binding CheckBoxLevel_3_4}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_3_5" IsChecked="{Binding CheckBoxLevel_3_5}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_3_6" IsChecked="{Binding CheckBoxLevel_3_6}" Content="" Background="#FF00ADFF"/>
                <TextBlock Grid.Row="6" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="第3层"></TextBlock>


                <CheckBox Grid.Row="0" Grid.Column="3" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_4_1" IsChecked="{Binding CheckBoxLevel_4_1}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_4_2" IsChecked="{Binding CheckBoxLevel_4_2}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_4_3" IsChecked="{Binding CheckBoxLevel_4_3}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="3" Grid.Column="3" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_4_4" IsChecked="{Binding CheckBoxLevel_4_4}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="4" Grid.Column="3" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_4_5" IsChecked="{Binding CheckBoxLevel_4_5}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="5" Grid.Column="3" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_4_6" IsChecked="{Binding CheckBoxLevel_4_6}" Content="" Background="#FF00ADFF"/>
                <TextBlock Grid.Row="6" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="第4层"></TextBlock>


                <CheckBox Grid.Row="0" Grid.Column="4" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_5_1" IsChecked="{Binding CheckBoxLevel_5_1}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_5_2" IsChecked="{Binding CheckBoxLevel_5_2}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_5_3" IsChecked="{Binding CheckBoxLevel_5_3}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_5_4" IsChecked="{Binding CheckBoxLevel_5_4}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="4" Grid.Column="4" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_5_5" IsChecked="{Binding CheckBoxLevel_5_5}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="5" Grid.Column="4" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_5_6" IsChecked="{Binding CheckBoxLevel_5_6}" Content="" Background="#FF00ADFF"/>
                <TextBlock Grid.Row="6" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="第5层"></TextBlock>


                <CheckBox Grid.Row="0" Grid.Column="5" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_6_1" IsChecked="{Binding CheckBoxLevel_6_1}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_6_2" IsChecked="{Binding CheckBoxLevel_6_2}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="2" Grid.Column="5" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_6_3" IsChecked="{Binding CheckBoxLevel_6_3}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="3" Grid.Column="5" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_6_4" IsChecked="{Binding CheckBoxLevel_6_4}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="4" Grid.Column="5" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_6_5" IsChecked="{Binding CheckBoxLevel_6_5}" Content="" Background="#FF00ADFF"/>
                <CheckBox Grid.Row="5" Grid.Column="5" HorizontalAlignment="Center" BorderBrush="Black" VerticalAlignment="Center" Click="CheckBox_Click" x:Name="CheckBoxLevel_6_6" IsChecked="{Binding CheckBoxLevel_6_6}" Content="" Background="#FF00ADFF"/>
                <TextBlock Grid.Row="6" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Text="第6层"></TextBlock>
            </Grid>

        </Border>


        <Border Grid.Row="2"  >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="14" Text="{Binding LevelShowText}"></TextBlock>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="14" Text="反推试验电流(A)"></TextBlock>
                <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="14" Text="偏差值(A)"></TextBlock>

                <TextBox Background="Black" Foreground="Yellow" Width="50" Grid.Row="1" Grid.Column="0" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding McsjTrsl}"></TextBox>
                <TextBox Background="Black" Foreground="Yellow" Width="50" Grid.Row="1" Grid.Column="1" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Ftsydl}"></TextBox>

                <StackPanel  Grid.Row="1" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBox Background="Black" Foreground="Yellow" Width="50" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Pcz}"></TextBox>
                    <Button Width="50" Command="{Binding BtnCommandStartCount}"   Margin="10 0 10 0" FontSize="15" Content="计算" VerticalAlignment="Center" HorizontalAlignment="Center"></Button>
                </StackPanel>

            </Grid>

        </Border>

        
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="执行(仿真对应到实际开关)" Width="250" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <Button Width="60" Command="{Binding BtnCommandStartExe}"  Content="确定" FontSize="15" ></Button>
            <Button Width="60" Command="{Binding BtnCommandBtnCanExe}" FontSize="15" Content="取消" Margin="20 0 10 0"></Button>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBlock Text="执行流程" Width="70" FontSize="15" Margin="10 0 10 0" VerticalAlignment="Center" ></TextBlock>
            <TextBox Background="Black" Text="{Binding Exerecord}" Foreground="Yellow" Width="340" FontSize="15"></TextBox>
        </StackPanel>
        


    </Grid>
</Window>
