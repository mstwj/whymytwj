<Window x:Class="车库客户端Prism入口.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="http://prismlibrary.com/"
        xmlns:local="clr-namespace:车库客户端Prism入口.Views"
        mc:Ignorable="d"
        xmlns:b="clr-namespace:车库客户端Prism入口.Base"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        p:ViewModelLocator.AutoWireViewModel="True"
        Title="LoginWindow" Height="350" Width="600">
    <Window.Resources>
    <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="pack://application:,,,/Assets;component/Styles/BaseResources.xaml"/>
            <ResourceDictionary Source="pack://application:,,,/Assets;component/Styles/ButtonStyles.xaml"/>

            <ResourceDictionary>
                <ControlTemplate TargetType="TextBox" x:Key="UserNameTextBoxTemplate">
                    <Border BorderBrush="#DDD" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="&#xeaa0;" FontFamily="{StaticResource Iconfont}"
                                           FontSize="20" Foreground="#BBB" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="&#xe6df;" Grid.Column="2" FontFamily="{StaticResource Iconfont}"
                                           FontSize="18" Foreground="#BBB" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"
                                             Margin="0,5,0,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>

                <!--Style 包含 ControlTemplate：Template-->
                <ControlTemplate TargetType="PasswordBox" x:Key="PasswordBoxTemplate">
                    <Border BorderBrush="#DDD" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="&#xe60a;" FontFamily="{StaticResource Iconfont}"
                                           FontSize="14" Foreground="#BBB" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="&#xe613;" Grid.Column="2" FontFamily="{StaticResource Iconfont}"
                                           FontSize="16" Foreground="#BBB" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <ScrollViewer x:Name="PART_ContentHost" Grid.Column="1" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"
                                             Margin="0,5,0,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>

                <Style TargetType="Hyperlink">
                    <Setter Property="Foreground" Value="#AAA"/>
                    <Setter Property="TextBlock.TextDecorations" Value="{x:Null}"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="#999"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <ControlTemplate TargetType="Button" x:Key="LoginButtonTemplate">
                    <Grid>
                        <Border CornerRadius="3">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF0ABEFF" Offset="0"/>
                                    <GradientStop Color="#FF00B4FA" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                        </Border>
                        <Border CornerRadius="3" Name="mask"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#22FFFFFF" TargetName="mask"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#11000000" TargetName="mask"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ResourceDictionary>
        </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome NonClientFrameEdges="None"/>
    </WindowChrome.WindowChrome>

    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Assets;component/Images/login_back.png"></ImageBrush>
    </Window.Background>

    <Grid>
        <StackPanel Width="220" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="40,30,0,0">
            <TextBlock Text="用户名" Margin="0,5" Foreground="#999"/>
            <TextBox BorderBrush="#DDD" Height="30" VerticalContentAlignment="Center" Text="{Binding UserName}"/>
            <TextBlock Text="密码" Margin="0,15,0,5" Foreground="#999"/>
            <PasswordBox BorderBrush="#DDD" Height="30" VerticalContentAlignment="Center"
                     b:PasswordUnits.Attach="true"
                     b:PasswordUnits.Password="{Binding Password}"/>
            <Button Content="登录" Height="30" Margin="0,20,0,0" BorderThickness="0" Foreground="White" 
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#0C93F4" Offset="0"/>
                        <GradientStop Color="#0666CC" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>

        <Button Width="40" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,0" BorderThickness="0" Background="Transparent"
            WindowChrome.IsHitTestVisibleInChrome="True" Click="Button_Click">
            <Path Data="M0 0 12 12M12 0 0 12" Stroke="#0666CC" StrokeThickness=" 1"/>
        </Button>

        <!--
        <Grid Background="Transparent"
              Visibility="{Binding IsLoading,Converter={StaticResource Bool2Visibility}}">
            <controls:Loading Message="{Binding LoadinMessage}"></controls:Loading>
            
        </Grid>
        -->
    </Grid>
</Window>
