<UserControl x:Class="第一次prism_DeviceModule.Views.DeviceDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:第一次prism_DeviceModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="5" Margin="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="Gray" Opacity="0.1"/>
            </Border.Effect>
        </Border>

        <Border Background="White" CornerRadius="5" Grid.Row="1" Margin="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="Gray" Opacity="0.1"/>
            </Border.Effect>
        </Border>

        <Border Background="White" CornerRadius="5" Grid.Row="2" Margin="5">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="Gray" Opacity="0.1"/>
            </Border.Effect>
        </Border>

        <TextBlock Text="设备运行参数" Foreground="#555" FontWeight="Bold" 
           VerticalAlignment="Top" Margin="20"/>

        <ListBox VerticalAlignment="Bottom" BorderThickness="0"
                 Background="Transparent" Margin="10,0,10,3"
                 ItemsSource="{Binding DeviceList}"
                 SelectedIndex="0"
                 Name="lb">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border Background="Transparent" Name="border" BorderThickness="0,0,0,2">
                                    <TextBlock Text="{Binding Header}" Margin="20,0,20,12" Foreground="#888"
                                       FontSize="12"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="border" Property="BorderBrush" Value="#3269DE"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Grid Grid.Row="1" DataContext="{Binding ElementName=lb,Path=SelectedItem}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Source="{Binding Image}" Margin="30,40,20,20"/>

            <ItemsControl ItemsSource="{Binding Properties}" Margin="10,0,10,0" Grid.Column="1"
              VerticalAlignment="Center">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="33">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border Background="#D7E5F1" Margin="0,0.5"/>
                            <Border Background="#1000" Margin="0,0.5" Grid.Column="1"/>
                            <TextBlock Text="{Binding PropName}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#888" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding PropValue}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"  Foreground="#FF296DB9" Margin="5,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Grid Margin="10" Grid.Row="2" DataContext="{Binding ElementName=lb,Path=SelectedItem}">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Ellipse Fill="Orange" Width="8" Height="8" VerticalAlignment="Center" HorizontalAlignment="Left"
                    Margin="5,0"/>
            <TextBlock Text="事件记录" VerticalAlignment="Center" Margin="25,0" FontWeight="Black"
               Foreground="#555"/>

            <Grid Grid.Row="1" Margin="10,0" Background="#D7E5F1"
                TextBlock.Foreground="#888">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="事件发生时间" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="事件类型" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="事件消息" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="级别" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="责任人" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="状态" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="处理时间" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
            <ItemsControl Grid.Row="2" ItemsSource="{Binding EventList}" Margin="10,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Time}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Type}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Message}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Level}" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding DutyUser}" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding State}" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding SolveTime}" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        
    </Grid>
</UserControl>
