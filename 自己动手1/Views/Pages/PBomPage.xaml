<UserControl x:Class="自己动手1.Views.Pages.PBomPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:自己动手1.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

<!--如果其他的页面也要不要在这里，放到其他地方，比如支援-->
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="b2vConverter"/>

        <Style TargetType="Button" x:Key="SearchButtonStlye">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="0,3,3,0">
                            <TextBlock Text="搜索" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Foreground="White"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SearchTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
            <Setter Property="BorderBrush" Value="#FFD4EEFB"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}" 
                                SnapsToDevicePixels="True"
                                CornerRadius="5" Height="30">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="&#xe752;" FontFamily="{DynamicResource Iconfont}"
                                           VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#999" FontSize="14"/>
                                <TextBlock Text="输入产品编号/名称查找" VerticalAlignment="Center" Margin="3,0" FontSize="12"
                                           Foreground="#CCC" Grid.Column="1" Visibility="Collapsed" Name="mask"/>
                                <ScrollViewer x:Name="PART_ContentHost"  Grid.Column="1" Focusable="false" 
                                              VerticalAlignment="Center"
                                              HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                <!--<TextBox Text="{TemplateBinding Text}" Grid.Column="1" Background="Transparent" BorderThickness="0"
                                         VerticalContentAlignment="Center"/>-->

                                <Button Grid.Column="2" Style="{StaticResource SearchButtonStlye}"
                                        Background="{TemplateBinding BorderBrush}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="#FF6590C1"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding Text,RelativeSource={RelativeSource Self}}" Value="">
                                <Setter Property="Visibility" Value="Visible" TargetName="mask"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="true">
                    <Setter Property="BorderBrush" Value="#FF6590C1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--第一行：搜索框、添加按钮-->
        <TextBox Style="{StaticResource SearchTextBoxStyle}" 
                 Width="280" HorizontalAlignment="Left"/>

        <Button Background="Orange" VerticalAlignment="Center" HorizontalAlignment="Right"
                Height="30" BorderThickness="0" Command="{Binding NewPBOMCommand}">
            <Button.Content>
                <Grid Margin="5,0,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Path Data="M0,6 12,6M6,0 6,12" Stroke="White" StrokeThickness="2" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBlock Grid.Column="1" Text="添加新产品" Foreground="White"/>
                </Grid>
            </Button.Content>
        </Button>

        <!--第二行：列标头-->
        <!--这样处理有个问题：如果遇到列头动态宽度，拖动改变的需求会麻烦
            解决办法：1、使用GridSplitter，需要同步宽度到内容列表 
                      2、使用ListView，可以创建列信息，进行数据绑定
        
        ListView->ItemsControl(集合容器  默认不带虚拟化)   ScrollViewer
        -->
        <Grid Grid.Row="1" VerticalAlignment="Bottom" Margin="0,0,0,5"
              TextBlock.Foreground="#666">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="序号" HorizontalAlignment="Center"/>
            <TextBlock Text="产品编号" Grid.Column="1" HorizontalAlignment="Center"/>
            <TextBlock Text="产品名称" Grid.Column="2" HorizontalAlignment="Center"/>
            <TextBlock Text="图纸编号" Grid.Column="3" HorizontalAlignment="Center"/>
            <TextBlock Text="生命周期" Grid.Column="4" HorizontalAlignment="Center"/>
            <TextBlock Text="创建时间" Grid.Column="5" HorizontalAlignment="Center"/>
            <TextBlock Text="创建人" Grid.Column="6" HorizontalAlignment="Center"/>
            <TextBlock Text="备注/描述" Grid.Column="7"/>
            <TextBlock Text="操作" Grid.Column="8" HorizontalAlignment="Center"/>
        </Grid>

        <!--产品信息列表-->
        <ItemsControl Grid.Row="2" ItemsSource="{Binding PBOMList}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="5" 
                            Background="White" Margin="0,2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="auto"/>
                                <!--根据内部内容进行高度适配，否则就是0-->
                            </Grid.RowDefinitions>
                            <!--产品基本信息-->
                            <Grid VerticalAlignment="Center" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="180"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Index,StringFormat={}{0:000}}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding PNum}" Grid.Column="1" HorizontalAlignment="Center"
                                           FontWeight="Normal"/>
                                <TextBlock Text="{Binding PName}" Grid.Column="2" HorizontalAlignment="Center" FontWeight="Normal"/>
                                <TextBlock Grid.Column="3" HorizontalAlignment="Center">
                                    <Hyperlink TextDecorations="None">P-01-101</Hyperlink>
                                </TextBlock>
                                <TextBlock Text="导入期" Grid.Column="4" HorizontalAlignment="Center"/>
                                <TextBlock Text="2022-09-20 20:00" Grid.Column="5" HorizontalAlignment="Center"/>
                                <TextBlock Text="Jovan" Grid.Column="6" HorizontalAlignment="Center"/>
                                <TextBlock Text="补充说明信息" Grid.Column="7"/>


                                <!--操作-->
                                <TextBlock Grid.Column="8" HorizontalAlignment="Center" FontSize="12" VerticalAlignment="Center">
                            <Hyperlink TextDecorations="None">编辑</Hyperlink>
                            <Hyperlink TextDecorations="None">删除</Hyperlink>
                            <Hyperlink TextDecorations="None">添加零件</Hyperlink>
                            <Hyperlink TextDecorations="None" 
                                        Command="{Binding ExpandedCommand}"
                                        CommandParameter="{Binding}">零件信息</Hyperlink>
                                </TextBlock>
                            </Grid>

                            <!--产品相关零件信息-->
                            <Grid Grid.Row="1" Height="auto" Name="detail" Visibility="{Binding IsExpanded,Converter={StaticResource b2vConverter}}">
                                <Border BorderBrush="#EEE" BorderThickness="0,1,0,0" VerticalAlignment="Top"
                                    Margin="10,0" Grid.Row="1"/>
                                <ItemsControl ItemsSource="{Binding PartList}" Margin="40,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Height="35" Background="Transparent" Name="part_root">
                                                <Border BorderBrush="Orange" BorderThickness="3,0,0,0" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal" Margin="5,0">
                                                        <TextBlock Text="零件：" Foreground="#666"/>
                                                        <TextBlock Text="零件1-1" FontWeight="Normal"/>
                                                        <TextBlock Margin="5,0" FontWeight="Normal">
                                                            <Run Text="["/>
                                                            <Run Text="PT190717001"/>
                                                            <Run Text="]"/>
                                                        </TextBlock>

                                                        <TextBlock Margin="40,0,0,0">
                                                    <Run Text="数量：" Foreground="#666"/>
                                                    <Run Text="2" FontWeight="Normal"/>
                                                        </TextBlock>

                                                        <TextBlock Margin="30,0,0,0">
                                                    <Run Text="来源：" Foreground="#666"/>
                                                    <Run Text="外协" FontWeight="Normal"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Border>

                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20,0" FontSize="12">
                                                    <Hyperlink TextDecorations="None">编辑</Hyperlink>
                                                    <Hyperlink TextDecorations="None">删除</Hyperlink>
                                                </TextBlock>
                                            </Grid>
                                            <DataTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="part_root" Property="Background" Value="#F7F9FA"/>
                                                </Trigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


    </Grid>
</UserControl>
