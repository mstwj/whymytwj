<UserControl x:Class="自己动手1.Views.Pages.DevicePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:自己动手1.Views.Pages"
             xmlns:zxc ="clr-namespace:自己动手1.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Border Background="White" BorderBrush="#FF296DB9" BorderThickness="1" CornerRadius="3" Width="15" Height="15"
                                    VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" Name="bor">
                                <Path Data="M0 3 3 6 9 0" Stroke="White" StrokeThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bor" Property="Background" Value="#FF296DB9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <CheckBox Content="实时采集" VerticalAlignment="Center" IsChecked="{Binding MonitorState}"/>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding DeviceList}">

            <!--横向显示-->
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <!--显示方式-->
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Width="220">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="220"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <!--图像-->
                        <Border BorderBrush="#FF296DB9" BorderThickness="0,1,0,0" CornerRadius="10" Margin="10"
                                Background="White">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Direction="0" Opacity="0.2" Color="#FF296DB9"/>
                            </Border.Effect>
                            <Border.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="#BBFFFFFF" Offset="0.3"/>
                                    <GradientStop Color="#BBFFFFFF" Offset="0.7"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                            <Image Source="{Binding Image}" Margin="20,40,50,20"/>
                        </Border>

                        <zxc:WarningLight LightState="{Binding LightType}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="15" Margin="30"></zxc:WarningLight>

                        <!--设备名称-->
                        <Border Background="#FF296DB9" Height="30" Width="130" CornerRadius="15" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Row="1" Panel.ZIndex="1">
                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                        </Border>

                        <!--属性列表-->
                        <Border Grid.Row="1" Grid.RowSpan="2" Margin="10,15,10,0" BorderBrush="#FF296DB9" BorderThickness="0,1,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                    <GradientStop Color="#55F7F9FA" Offset="0"/>
                                    <GradientStop Color="#FFD4EEFB" Offset="0.7"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <ItemsControl ItemsSource="{Binding Properties}" Margin="10,25,10,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="30">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <!--绑定属性名称 -->
                                            <TextBlock Text="{Binding PropName}" 
                                                       VerticalAlignment="Center" 
                                                       HorizontalAlignment="Right" 
                                                       Foreground="#888"
                                                       Margin="0,0,5,0"/>
                                            <!--绑定属性值-->
                                            <TextBlock Text="{Binding PropValue}"
                                                       VerticalAlignment="Center" 
                                                       HorizontalAlignment="Center" 
                                                       Grid.Column="1" 
                                                       Foreground="#FF296DB9" 
                                                       Margin="5,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Border>

                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        
    </Grid>
</UserControl>
