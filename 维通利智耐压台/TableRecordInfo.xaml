            </Border>
            
            
            <DataGrid 
                x:Name="dataGrid" 
                IsReadOnly ="True"                
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                FontSize="16"
                
                Grid.Row="1">
                <DataGrid.Columns>
                    <!--
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
