                    <DataGridTextColumn Header="开始日期" Binding="{Binding RecordDateTimer}" />
                    <DataGridTextColumn Header="产品名称" Binding="{Binding ProductName}" />
                    <DataGridTextColumn Header="出厂编号" Binding="{Binding ProductNumber}" />
                    <DataGridTextColumn Header="类型型号" Binding="{Binding ProductType}" />
                    <DataGridTextColumn Header="图号" Binding="{Binding ProductTuhao}" />
                    <DataGridTextColumn Header="施压部位" Binding="{Binding ProductParts}" />
                    
                </DataGrid.Columns>
            </DataGrid>

