<Window x:Class="维通利智耐压台.TableProductInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:维通利智耐压台"
        mc:Ignorable="d"
        Title="TableProductInfo" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>

        </Grid.RowDefinitions>

        <Border Background="#2263B3" Grid.Row="0">
            <TextBlock Text="产品表" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
        </Border>

        <DataGrid x:Name="dataGrid" RowEditEnding="dataGrid_RowEditEnding"                                             
        AutoGenerateColumns="False"
        CanUserAddRows="False"
        CanUserDeleteRows="False"
        FontSize="16"
        Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                <DataGridTextColumn Header="产品名称" Binding="{Binding ProductName}" />
                <DataGridTextColumn Header="出厂编号" Binding="{Binding ProductNumber}" />
                <DataGridTextColumn Header="规格型号" Binding="{Binding ProductType}" />
                <DataGridTextColumn Header="图号" Binding="{Binding ProductTuhao}" />
                <DataGridTextColumn Header="施加部位" Binding="{Binding ProductTuhao}" />
                <DataGridTextColumn Header="试验电压(标准kV)" Binding="{Binding ProductTestVotil}" />
                <DataGridTextColumn Header="局放量(标准Pc)" Binding="{Binding ProductTestPartial}" />
           
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="按照" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10"></Label>
            <ComboBox Width="120" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Margin="10 0 10 0" ItemsSource="{Binding BtnComboBox}" SelectedIndex="{Binding BtnComboBoxIndex }" ></ComboBox>
            <Label Content="查询" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10 0 30 0"></Label>
            <TextBox Background="White" Foreground="Black" FontSize="16" Text="{Binding SelectSea}"  VerticalAlignment="Center" HorizontalAlignment="Center" Height="25" Width="200"></TextBox>
            
            <Button FontSize="16" Width="100" Height="40" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Right" Click="QueryButton_Click" Content="查询"></Button>
            <Button FontSize="16" Width="100" Height="40" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Right" Click="Button_Click_Delete" Content="删除"></Button>
        </StackPanel>
    </Grid>
</Window>
