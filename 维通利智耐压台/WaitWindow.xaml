<Window x:Class="维通利智耐压台.WaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:维通利智耐压台"
        WindowStyle="None"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="请等待" Height="250" Width="400">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Opacity="0.9" >
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="正在处理，请稍候..." FontSize="25" FontWeight="Bold" Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" Height="30"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
