<Window x:Class="维通利智耐压台.ParamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:维通利智耐压台"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"        
        Title="ParamWindow" Height="358" Width="280">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Header="试品参数" Background="#FFE2E2E2" Margin="10" BorderThickness="2" BorderBrush="Black"   FontSize="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0"  Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" >
                    <TextBlock Text="高压电压倍率"  Margin="20 0 10 0" ></TextBlock>
                    <TextBox Width="90" Background="White" Foreground="Black" Text="{Binding GaoyadianyaSelect }"></TextBox>
                </StackPanel>

                <StackPanel Grid.Row="1"  Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" >
                    <TextBlock Text="高压电流倍率"  Margin="20 0 10 0" ></TextBlock>
                    <TextBox Width="90" Background="White" Foreground="Black" Text="{Binding GaoyadianliuSelect }"></TextBox>
                </StackPanel>





                <StackPanel Grid.Row="2"  Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" >
                    <TextBlock Text="低压电压倍率"  Margin="20 0 10 0" ></TextBlock>
                    <TextBox Width="90" Background="White" Foreground="Black" Text="{Binding DiyadianyaSelect }"  ></TextBox>
                </StackPanel>

                <StackPanel Grid.Row="3"  Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" >
                    <TextBlock Text="低压电流倍率"  Margin="20 0 10 0" ></TextBlock>
                    <TextBox Width="90" Background="White" Foreground="Black" Text="{Binding DiyadianliuSelect }"  ></TextBox>
                </StackPanel>


            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button  Content="保存配置" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Click="Button_Click_Save"></Button>
            <Button  Content="退出配置" FontSize="15" Height="35" Width="80" Margin="10 0 0 0" Click="Button_Click_Quit"></Button>
        </StackPanel>
    </Grid>
</Window>
