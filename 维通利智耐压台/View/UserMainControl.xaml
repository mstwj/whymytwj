<UserControl x:Class="维通利智耐压台.View.UserMainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:维通利智耐压台.View" xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="700">
    <UserControl.Resources>
        <sys:Double x:Key="RowH">75</sys:Double>
    </UserControl.Resources>
    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            
            <RowDefinition Height="1.5*" ></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="{Binding Source={StaticResource RowH}}" FontSize="16" Text="高压电压"  ></TextBlock>
            <TextBox Text="{Binding PlcHighVoltage}" FontSize="16" Width="{Binding Source={StaticResource RowH}}" ></TextBox>
            <TextBlock Width="20" FontSize="16" Text="kV" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="{Binding Source={StaticResource RowH}}" FontSize="16" Text="低压电压" ></TextBlock>
            <TextBox Text="{Binding LowVoltage}" FontSize="16" Width="{Binding Source={StaticResource RowH}}" ></TextBox>
            <TextBlock Width="20" FontSize="16" Text="V" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
            <TextBlock Width="100" FontSize="16" Text="高压电压倍率" Margin="5 0 0 0"></TextBlock>
            <TextBox Width="45" FontSize="16" Text="{Binding GaoyadianyaSelect}" Margin="0 0 0 0" ></TextBox>
        </StackPanel>


        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="{Binding Source={StaticResource RowH}}" FontSize="16" Text="高压电流" ></TextBlock>
            <TextBox Text="{Binding HighCurrent}" FontSize="16" Width="{Binding Source={StaticResource RowH}}" ></TextBox>
            <TextBlock Width="30" FontSize="16" Text="mA" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="{Binding Source={StaticResource RowH}}" FontSize="16" Text="低压电流" ></TextBlock>
            <TextBox Text="{Binding LowCurrent}" FontSize="16" Width="{Binding Source={StaticResource RowH}}"></TextBox>
            <TextBlock Width="30" FontSize="16" Text="A" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
            <TextBlock Width="100" FontSize="16" Text="低压电流倍率" Margin="0 0 0 0"></TextBlock>
            <TextBox Width="45" FontSize="16" Text="{Binding DiyadianliuSelect }" Margin="0 0 0 0" ></TextBox>
        </StackPanel>


        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="{Binding Source={StaticResource RowH}}" FontSize="16" Text="局放量" Margin="10 0 0 0"></TextBlock>
            <TextBox Text="{Binding PartialNumber}" FontSize="16" Width="{Binding Source={StaticResource RowH}}"></TextBox>
            <TextBlock Width="30" FontSize="16" Text="pC" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="{Binding Source={StaticResource RowH}}" FontSize="16" Text="试品高压"  ></TextBlock>
            <TextBox Text="{Binding HighVoltage}" FontSize="16" Width="{Binding Source={StaticResource RowH}}" ></TextBox>
            <TextBlock Width="20" FontSize="16" Text="kV" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>

        <!--
        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="{Binding Source={StaticResource RowH}}" FontSize="16" Text="耐压计时" ></TextBlock>
            <TextBox Text="{Binding IsTimer}" FontSize="16" Width="{Binding Source={StaticResource RowH}}" ></TextBox>
            <TextBlock Width="20" FontSize="16" Text="S" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>
        -->

        <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="50" FontSize="16" Text="阶段1" Margin="10 0 0 0"></TextBlock>
            <TextBox Text="{Binding IsLevel1TimeOver}" FontSize="16" Width="40"></TextBox>
            <TextBlock Width="30" FontSize="16" Text="S" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="50" FontSize="16" Text="阶段2" Margin="10 0 0 0"></TextBlock>
            <TextBox Text="{Binding IsLevel2TimeOver}" FontSize="16" Width="40"></TextBox>
            <TextBlock Width="30" FontSize="16" Text="S" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
            <TextBlock Width="50" FontSize="16" Text="阶段3" Margin="10 0 0 0"></TextBlock>
            <TextBox Text="{Binding IsLevel3TimeOver}" FontSize="16" Width="40"></TextBox>
            <TextBlock Width="30" FontSize="16" Text="S" Margin="10 0 0 0" ></TextBlock>
        </StackPanel>

        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                
                <StackPanel Grid.Column="0"  VerticalAlignment="Center"  HorizontalAlignment="Center">
                    <Image Source="{Binding ImageShebei5}" Width="30" Height="30"></Image>
                    <TextBlock  Text="合闸" ></TextBlock>
                </StackPanel>
                

                <StackPanel Grid.Column="1"  VerticalAlignment="Center"  HorizontalAlignment="Center">
                    <Image Source="{Binding ImageShebei4}"  Width="30" Height="30"></Image>
                    <TextBlock  Text="过流" ></TextBlock>
                </StackPanel>


                <StackPanel Grid.Column="2"  VerticalAlignment="Center"  HorizontalAlignment="Center">
                    <Image Source="{Binding ImageShebei3}"  Width="30" Height="30"></Image>
                    <TextBlock  Text="上线" ></TextBlock>
                </StackPanel>



                <StackPanel Grid.Column="3"  VerticalAlignment="Center"  HorizontalAlignment="Center">
                    <Image Source="{Binding ImageShebei2}"  Width="30" Height="30"></Image>
                    <TextBlock  Text="零位" ></TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="4"  VerticalAlignment="Center"  HorizontalAlignment="Center">
                    <Image Source="{Binding ImageShebei1}" Width="30" Height="30"></Image>
                    <TextBlock  Text="门联锁" ></TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="5"  VerticalAlignment="Center"  HorizontalAlignment="Center">
                    <Image Source="{Binding ImageShebei0}"  Width="30" Height="30"></Image>
                    <TextBlock  Text="急停" ></TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="6"  VerticalAlignment="Center"  HorizontalAlignment="Center">
                    <Image Source="{Binding ImageShebei8}" Width="30" Height="30"></Image>
                    <TextBlock  Text="上升" ></TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="7"  VerticalAlignment="Center"  HorizontalAlignment="Center">
                    <Image Source="{Binding ImageShebei9}" Width="30" Height="30"></Image>
                    <TextBlock  Text="下降" ></TextBlock>
                </StackPanel>


            </Grid>
        </Border>



        

    </Grid>

</UserControl>
