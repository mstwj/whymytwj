<UserControl x:Class="维通利智耐压台.View.UserTesetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:维通利智耐压台.View"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

    
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBlock Grid.Row="0" Grid.Column="0" Width="100" VerticalAlignment="Center" HorizontalAlignment="Right" Text="目标电压(kV)" Margin="0 0 5 0"></TextBlock>
            <TextBlock Grid.Row="0" Grid.Column="1" Width="90" VerticalAlignment="Center" HorizontalAlignment="Right" Text="施压时间(S)" Margin="0 0 0 0"></TextBlock>
        </StackPanel>
        


        <StackPanel Grid.Row="1" Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="2"  VerticalAlignment="Center"  HorizontalAlignment="Left">
            <TextBlock Width="50"  Text="阶段1" Margin="10 0 0 0"></TextBlock>
            <TextBox GotFocus="TextBox_GotFocus"  Background="White" Foreground="Black"  Text="{Binding TextLevel1Volte}" Width="80"  ></TextBox>
            <TextBox GotFocus="TextBox_GotFocusTimer" Background="White" Foreground="Black" Text="{Binding TextLevel1Time}" Width="50" Margin="20 0 10 0"></TextBox>
            <CheckBox VerticalAlignment="Center" IsChecked="{Binding Check1}"  ></CheckBox>
        </StackPanel>


        <StackPanel Grid.Row="2" Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="2"  VerticalAlignment="Center"  HorizontalAlignment="Left">
            <TextBlock Width="50"  Text="阶段2" Margin="10 0 0 0"></TextBlock>
            <TextBox GotFocus="TextBox_GotFocus2" Background="White" Foreground="Black"  Text="{Binding TextLevel2Volte}" Width="80"  ></TextBox>
            <TextBox GotFocus="TextBox_GotFocus2Timer" Background="White" Foreground="Black" Text="{Binding TextLevel2Time}" Width="50" Margin="20 0 10 0"></TextBox>
            <CheckBox VerticalAlignment="Center" IsChecked="{Binding Check2}" ></CheckBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="2"  VerticalAlignment="Center"  HorizontalAlignment="Left">
            <TextBlock Width="50"  Text="阶段3" Margin="10 0 0 0"></TextBlock>
            <TextBox GotFocus="TextBox_GotFocus3" Background="White" Foreground="Black"  Text="{Binding TextLevel3Volte}" Width="80"  ></TextBox>
            <TextBox GotFocus="TextBox_GotFocus3Timer" Background="White" Foreground="Black" Text="{Binding TextLevel3Time}" Width="50" Margin="20 0 10 0"></TextBox>
            <CheckBox VerticalAlignment="Center" IsChecked="{Binding Check3}" ></CheckBox>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <TextBlock Width="150" Text="高压保护电压(kV)" Margin="10 0 0 0" ></TextBlock>
            <TextBox GotFocus="TextBox_GotFocusgaoyabaohu" Background="White" Foreground="Black" Text="{Binding GaoYaProctectVolte}" Width="50" Margin="0 0 0 0"></TextBox>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Center" Grid.ColumnSpan="2" HorizontalAlignment="Left">
            <TextBlock Width="150" Text="高压保护电流(mA)" Margin="10 0 0 0" ></TextBlock>
            <TextBox GotFocus="TextBox_GotFocusgaoliubaohu" Background="White" Foreground="Black" Text="{Binding DiYaProctectCurrent}" Width="50" Margin="0 0 0 0"  ></TextBox>
        </StackPanel>

    </Grid>

</UserControl>
