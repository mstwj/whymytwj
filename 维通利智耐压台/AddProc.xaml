<Window x:Class="维通利智耐压台.AddProc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:维通利智耐压台"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"   
        Title="选择产品" Height="400" Width="330">
    <Grid>
        <Grid Background="#FFE2E2E2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>

            <GroupBox Header="产品配置" BorderThickness="2" BorderBrush="Black"  Background="#FFE2E2E2"  FontSize="16" Grid.Row="0"  Margin="15">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="18"/>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="产品名称:" Margin="20 0"></TextBlock>
                        <TextBox Foreground="Black"  Background="White"  MaxLength="35" Text="{Binding ProductName}" Width="150" ></TextBox>
                    </StackPanel>


                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="出厂编号:" Margin="20 0"></TextBlock>
                        <ComboBox x:Name="myCombox" IsEditable="True" Width="150" Text="{Binding ProductNumber}" ItemsSource="{Binding ProductNumberCBoxData}" DropDownClosed="BoxDropDownClose"></ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="规格型号:"  Margin="20 0"></TextBlock>
                        <TextBox Foreground="Black"  Background="White"  MaxLength="35" Text="{Binding ProductType}" Width="150" ></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="图号:"  Margin="20 0"></TextBlock>
                        <TextBox Foreground="Black"  Background="White" Margin="30 0 0 0" MaxLength="5" Text="{Binding ProductTuhao}" Width="150" ></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="加压部位:" Margin="20 0"></TextBlock>
                        <TextBox Foreground="Black"  Background="White" MaxLength="9" Text="{Binding ProductParts}" Width="150" ></TextBox>
                    </StackPanel>

                    
                    <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="试验电压(标准kV):" Margin="20 0"></TextBlock>
                        <TextBox Foreground="Black"  Background="White" MaxLength="9" Text="{Binding ProductTestVotil}" Width="85" ></TextBox>
                    </StackPanel>
                    <StackPanel Grid.Row="6" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="局放量(标准Pc):"  Margin="20 0"></TextBlock>
                        <TextBox Foreground="Black"  Background="White" MaxLength="10" Text="{Binding ProductTestPartial}" Width="105"></TextBox>
                    </StackPanel>

                </Grid>

            </GroupBox>

            <Border Grid.Row="2" Grid.Column="0"  Background="#2263B3" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button  Content="配置完成" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Command="{Binding BtnSetOver}" ></Button>
                    <Button  Content="退出配置" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Click="ClickCommand2" ></Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
