<Window x:Class="维通利智耐压台.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:维通利智耐压台" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" xmlns:view="clr-namespace:维通利智耐压台.View"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="740" Width="1024">
    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.7*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.6*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        
        <Menu Height="20" VerticalAlignment="Center" Grid.ColumnSpan="2" >
            <MenuItem Header="试验任务">
                <MenuItem Header="新建试验任务" Click="DoBtnMenu1_1Click" />
                <Separator/>
                <MenuItem Header="退出"  Click="DoBtnMenu1_2Click"/>
            </MenuItem>

            <MenuItem Header="系统设置">
                <MenuItem Header="通讯设置"  Click="DoBtnMenu2_1Click" />
                <MenuItem Header="试品设置"  Click="DoBtnMenu2_2Click" />
            </MenuItem>

            <MenuItem Header="数据管理">
                <MenuItem Header="产品管理"  Click="DoBtnMenu3_1Click" />
                <MenuItem Header="报告管理"  Click="DoBtnMenu3_2Click" />
            </MenuItem>
        </Menu>
        
        
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>


                <StackPanel Orientation="Horizontal">
                    <Image Margin="10 0 0 0" Width="80" Height="80" VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="myImage" Source="Asset/headlogo.png" />

                    <GroupBox Header="产品信息" BorderBrush="Black"  Background="#FFE2E2E2"  FontSize="16" Margin="10 0 10 0" >
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Label Content="出厂编号:" FontSize="16"></Label>
                            <Label Content="{Binding ProductNumber}" Width="60" FontSize="16"></Label>
                            <Label Content="规格型号:" FontSize="16"></Label>
                            <Label Content="{Binding ProductType}" Width="150" FontSize="16"></Label>
                        </StackPanel>
                    </GroupBox>
                    
                </StackPanel>
                <TextBlock Grid.Column="1" FontSize="35" Text="工频耐压试验系统" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                <Button Grid.Column="2" Background="Red" Foreground="Yellow" Command="{Binding BtnCommandWarring}"  Content="急停" Width="100" Height="40" FontSize="25"></Button>
                
            </Grid>
        </Border>
        
        
        
        <Border Grid.Row="2" Grid.Column="0" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="2.8*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                


                <GroupBox Header="试验" BorderThickness="2" BorderBrush="Black"  Background="#FFE2E2E2"  FontSize="16" Grid.Column="0" Grid.ColumnSpan="2"  Margin="5">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="15"/>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    
                    
                    <view:UserMainControl x:Name="userMainControl"></view:UserMainControl>
                    
                    
                </GroupBox>
                
            </Grid>
        </Border>
        

        <GroupBox Header="曲线图" Grid.Row="3" Grid.Column="0" BorderThickness="2" BorderBrush="Black"  Background="#FFE2E2E2"  FontSize="16"  Margin="5">
            <lvc:CartesianChart x:Name="Chart" Margin="3" LegendLocation="Top"  >
                <lvc:CartesianChart.Series  >
                    <lvc:LineSeries 
                        
                        StrokeThickness="1"
                        DataLabels="False" 
                        PointGeometrySize="0" 
                        Stroke="DodgerBlue" 
                        Values="{Binding ServerLineData}" 
                        Title="局放" />


                    <lvc:LineSeries 
                        
                        ScalesYAt="1"
                        StrokeThickness="1"
                        DataLabels="False" 
                        PointGeometrySize="1" 
                        Stroke="Red" 
                        Values="{Binding ServerLineData2}" 
                        Title="电压" />
                </lvc:CartesianChart.Series>

                
                <lvc:CartesianChart.AxisX >
                    <lvc:Axis ShowLabels="True" 
                              MinValue="0" 
                              MaxValue="200"                               
                              Title="时间(S)" >

                        <lvc:Axis.Separator>
                            <lvc:Separator Step="20" StrokeThickness="1" />
                        </lvc:Axis.Separator>
                        
                    </lvc:Axis>
                             
                </lvc:CartesianChart.AxisX>

                <lvc:CartesianChart.AxisY >
                    
                    <lvc:Axis  Title="局放(Pc)" 
                               MinValue="0" 
                               MaxValue="50" 
                               ShowLabels="True"
                               Foreground="DodgerBlue" 
                               >
                        <lvc:Axis.Separator>
                            <lvc:Separator Step="10"
                                           StrokeThickness="1.5"
                                           StrokeDashArray="0"
                                           />
                        </lvc:Axis.Separator>
                    </lvc:Axis>

                    <lvc:Axis  Title="电压(kV)"
                               MinValue="0" 
                               MaxValue="20" 
                               ShowLabels="True"
                               Foreground="IndianRed"
                               >
                        <lvc:Axis.Separator>
                            <lvc:Separator Step="5" 
                                           />
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

        </GroupBox>

        <Border Grid.Row="2" Grid.Column="1" Grid.RowSpan="3">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*"></RowDefinition>
                    <RowDefinition Height="1.2*"></RowDefinition>
                    <RowDefinition Height="0.9*"></RowDefinition>
                </Grid.RowDefinitions>

                <GroupBox Header="试验参数" BorderThickness="2" BorderBrush="Black"  Background="#FFE2E2E2"  FontSize="16" Grid.Row="0"  Margin="5">

                    <view:UserTesetControl x:Name="userTesetControl"></view:UserTesetControl>
                </GroupBox>


                <GroupBox Header="操作" BorderThickness="2" BorderBrush="Black"  Background="#FFE2E2E2"  FontSize="16" Grid.Row="1"  Margin="5">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition ></RowDefinition>
                        </Grid.RowDefinitions>
                                

                        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
                            <Button Content="手动" x:Name="BtnCommandAutoOrMatu" Width="100" Height="30" Command="{Binding BtnCommandAutoOrMatu}" CommandParameter="{Binding ElementName=BtnCommandAutoOrMatu}" Margin="10 0 10 0"/>
                            <Button Content="警铃" x:Name="BtnCommandElectric" Width="100" Command="{Binding BtnCommandElectric }" Margin="10 0 10 0"/>
                            
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
                            <Button Width="100" x:Name="BtnCommandUp" Content="升压" Height="30" Command="{Binding BtnCommandUp }" Margin="10 0 10 0"></Button>
                            <Button Width="100" x:Name="BtnCommandDown" Content="降压" Command="{Binding BtnCommandDown }" Margin="10 0 10 0"></Button>

                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Center">
                            <Button x:Name="BtnCommandClose" Width="100" Content="分闸" Height="30" Command="{Binding BtnCommandClose}" Margin="10 0 10 0"></Button>
                            <Button x:Name="BtnCommandOpen" Width="100" Content="合闸" Command="{Binding BtnCommandOpen}" Margin="10 0 10 0"></Button>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Button IsEnabled="False" x:Name="BtnCommandTimer" Width="100" Height="30"  Command="{Binding BtnCommandTimer}"  Click="BtnCommandTimer_Click"  Content="开始" Margin="10 0 10 0"></Button>

                            <Button IsEnabled="False" x:Name="BtnCommandStopTime" Content="停止"  Width="100" Command="{Binding BtnCommandStopTime}" Click="BtnCommandStopTime_Click"  Margin="10 0 10 0"></Button>
                            
                        </StackPanel>
                        
                    </Grid>

                </GroupBox>
                
                
                <GroupBox Header="日志" BorderThickness="2" BorderBrush="Black"  Background="#FFE2E2E2"  FontSize="16" Grid.Row="2"  Margin="5">
                    <ListBox ItemsSource="{Binding ListBoxData}" Grid.Column="1" FontSize="15" Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Blue"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRed}" Value="True">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <TextBlock.Text>
                                        <Binding Path="Text"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>
                
            </Grid>

        </Border>

    </Grid>
</Window>
