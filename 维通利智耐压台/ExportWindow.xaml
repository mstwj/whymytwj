<Window x:Class="维通利智耐压台.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:维通利智耐压台" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Title="WORD导出窗口" Height="740" Width="1200">

    <Border>
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Border Background="#2263B3" Grid.Row="0">
            <TextBlock Text="试验报告" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
        </Border>

        <Border  Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*"></RowDefinition>
                    <RowDefinition Height="2.5*"></RowDefinition>
                    <RowDefinition Height="2.5*"></RowDefinition>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Margin="20 10 ">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">

                            <TextBlock Text="测试员" VerticalAlignment="Center" FontSize="16" Margin="10 8 10 8" Width="100"></TextBlock>
                            <TextBox Text="{Binding Operate}" Background="White" Foreground="Black" FontSize="16" Width="80" Margin="10 5 10 5" ></TextBox>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">

                            <TextBlock Text="测试时间" VerticalAlignment="Center" FontSize="16" Margin="10 8 10 8" Width="80"></TextBlock>
                            <TextBox  Text="{Binding RecordDateTimer}" Background="White" Foreground="Black" FontSize="16" Width="160" Margin="10 5 10 5" ></TextBox>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">

                            <TextBlock Text="施压部位" VerticalAlignment="Center" FontSize="16" Margin="10 8 10 8" Width="80"></TextBlock>
                            <TextBox Text="{Binding ProductParts}" Background="White" Foreground="Black" FontSize="16" Width="160" Margin="10 5 10 5" ></TextBox>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">

                            <TextBlock Text="环境温度(°C)" VerticalAlignment="Center" FontSize="16" Margin="10 8 10 8" Width="100"></TextBlock>
                            <TextBox Text="{Binding Temperature}" Background="White" Foreground="Black" FontSize="16" Width="80" Margin="10 5 10 5" ></TextBox>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">

                            <TextBlock Text="大气压(Pa)" VerticalAlignment="Center" FontSize="16" Margin="10 8 10 8" Width="100"></TextBlock>
                            <TextBox Text="{Binding Airpressure}" Background="White" Foreground="Black" FontSize="16" Width="80" Margin="10 5 10 5" ></TextBox>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">

                            <TextBlock Text="产品名称" VerticalAlignment="Center" FontSize="16" Margin="10 8 10 8" Width="80"></TextBlock>
                            <TextBox Background="White" Text="{Binding ProductName}" Foreground="Black" FontSize="16" Width="160" Margin="10 5 10 5" ></TextBox>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left">

                            <TextBlock Text="产品编号" VerticalAlignment="Center" FontSize="16" Margin="10 8 10 8" Width="80"></TextBlock>
                            <TextBox Text="{Binding ProductNumber}" Background="White" Foreground="Black" FontSize="16" Width="160" Margin="10 5 10 5" ></TextBox>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left">

                            <TextBlock Text="图号" VerticalAlignment="Center" FontSize="16" Margin="10 8 10 8" Width="80"></TextBlock>
                            <TextBox Text="{Binding ProductTuhao}" Background="White" Foreground="Black" FontSize="16" Width="160" Margin="10 5 10 5" ></TextBox>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left">

                            <TextBlock Text="规格型号" VerticalAlignment="Center" FontSize="16" Margin="10 8 10 8" Width="80"></TextBlock>
                            <TextBox  Text="{Binding ProductType }" Background="White" Foreground="Black" FontSize="16" Width="160" Margin="10 5 10 5" ></TextBox>
                        </StackPanel>
                    </Grid>
                    
                </Border>

                <Border Grid.Row="1" Margin="30 20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.8*"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Border>
                            <Grid >
                                <Grid.RowDefinitions >
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.8*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.8*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.8*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.8*"></ColumnDefinition>
                                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <!--使用Border绘制边框-->
                                <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="3" Grid.Column="0" BorderBrush="Black"  BorderThickness="1"></Border>

                                <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1"></Border>
                                <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1" ></Border>
                                <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black " BorderThickness="1"  ></Border>
                                <Border Grid.Row="3" Grid.Column="1" BorderBrush="Black"  BorderThickness="1" ></Border>


                                <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="2" Grid.Column="2" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="3" Grid.Column="2" BorderBrush="Black"  BorderThickness="1"></Border>

                                <Border Grid.Row="0" Grid.Column="3" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="1" Grid.Column="3" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="2" Grid.Column="3" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="3" Grid.Column="3" BorderBrush="Black"  BorderThickness="1"></Border>

                                <Border Grid.Row="0" Grid.Column="4" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="1" Grid.Column="4" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="2" Grid.Column="4" BorderBrush="Black"  BorderThickness="1"></Border>
                                <Border Grid.Row="3" Grid.Column="4" BorderBrush="Black"  BorderThickness="1"></Border>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="施压阶段" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="施加电压(kV)" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="持续时间(S)" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="局放量(pC)" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="结果判断" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>


                                <TextBlock Grid.Row="1" Grid.Column="0" Text="第一阶段:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="第二阶段:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="第三阶段:" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding LevelV1}" Width="50" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding LevelV2}" Width="50" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding LevelV3}" Width="50" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                                </StackPanel>


                                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Width="30" Text="{Binding LevelTime1}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Width="30" Text="{Binding LevelTime2}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Width="30" Text="{Binding LevelTime3}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Width="50" Text="{Binding LevelPc1}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Width="50" Text="{Binding LevelPc2}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Width="50" Text="{Binding LevelPc3}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding LevelIsGood1}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding Leve2IsGood2}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                                <TextBlock Grid.Row="3" Grid.Column="4" Text="{Binding Leve3IsGood3}" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

                            </Grid>

                        </Border>

                        <Border Grid.Column="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                    <TextBlock Text="电压标准(kV)" VerticalAlignment="Center" FontSize="16" Margin="5 8 10 8" Width="100"></TextBlock>
                                    <TextBox Text="{Binding ProductStardVotil}"  Background="White" Foreground="Black" FontSize="16" Width="160" Margin="-10 20 10 10" ></TextBox>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left">

                                    <TextBlock Text="局放标准(pC)" VerticalAlignment="Center" FontSize="16" Margin="5 8 10 8" Width="100"></TextBlock>
                                    <TextBox Text="{Binding ProductStardPartial}" Background="White" Foreground="Black" FontSize="16" Width="160" Margin="-10 20 10 10" ></TextBox>
                                </StackPanel>

                            </Grid>
                        </Border>


                    </Grid>
                </Border>


                <Border Grid.Row="2" Margin="10">
                    <lvc:CartesianChart x:Name="ExportChart"  LegendLocation="Top"  >
                        <lvc:CartesianChart.Series  >
                            <lvc:LineSeries StrokeThickness="1" DataLabels="False"  PointGeometrySize="0" Stroke="DodgerBlue" Values="{Binding QueryServerLineData}" Title="局放" />
                            <lvc:LineSeries ScalesYAt="1" StrokeThickness="1" DataLabels="False"  PointGeometrySize="1" Stroke="Red" Values="{Binding QueryServerLineData2}" Title="电压" />
                        </lvc:CartesianChart.Series>


                        <lvc:CartesianChart.AxisX >
                            <lvc:Axis ShowLabels="True" MinValue="0" MaxValue="200" Title="时间(S)" >

                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="20"  StrokeThickness="1" />
                                </lvc:Axis.Separator>

                            </lvc:Axis>

                        </lvc:CartesianChart.AxisX>

                        <lvc:CartesianChart.AxisY >

                            <lvc:Axis  Title="局放(Pc)"  MinValue="0"  MaxValue="50"  ShowLabels="True" Foreground="DodgerBlue" >
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="5" StrokeThickness="1.5" StrokeDashArray="0"/>       
                                </lvc:Axis.Separator>
                            </lvc:Axis>

                            <lvc:Axis  Title="电压(kV)" MinValue="0"  MaxValue="20.0" ShowLabels="True" Foreground="IndianRed">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="2" />
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>

                </Border>

            </Grid>            
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBox Width="350" Background="White" Foreground="Black" IsReadOnly="True"  Text="{Binding SelectFineSave}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Margin="10 0 30 0"></TextBox>
            <Button  Width="250" FontSize="18" Command="{Binding BtnCommandSavePath}" Content="设置文件保存路径和文件名" Margin="10 0 10 0"></Button>
            <Button  Width="150" FontSize="18" Click="Button_Click"  Command="{Binding BtnCommandSaveWord}" Content="确认导出" ></Button>
        </StackPanel>

    </Grid>
    </Border>
</Window>
