<Window x:Class="童文君第一个Prism项目.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:童文君第一个Prism项目.Views"
         xmlns:p="http://prismlibrary.com/"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" Background="#F7F9FA"
        
        Title="MainView" Height="750" Width="1350">
    <WindowChrome.WindowChrome>
        <WindowChrome NonClientFrameEdges="None"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="RadioButton" x:Key="NavButtonStyle">
            <Setter Property="Foreground" Value="#8FFF"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent" Name="root">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"
                       Margin="15,10"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="root" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#7AC0FF" Offset="0"/>
                                            <GradientStop Color="White" Offset="0.8"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="Orange"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="#7AC0FF"/>
        <Border Background="White" Grid.Row="1"/>
        <!--标题-->
        <Image Source="../Assets/Images/logo.png" Margin="8" HorizontalAlignment="Left"/>
        <TextBlock Text="朝夕·MES" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="45,0,0,0" FontWeight="Normal"
                   Foreground="#Dfff"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="140,0,0,0">
            <RadioButton Style="{StaticResource NavButtonStyle}" IsChecked="True"
                         Command="{Binding NavCommand}"
                         CommandParameter="0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xe606;" FontFamily="../Assets/Fonts/#iconfont" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="工作台" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>
            <RadioButton Style="{StaticResource NavButtonStyle}"
                         Command="{Binding NavCommand}"
                         CommandParameter="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xe638;" FontFamily="../Assets/Fonts/#iconfont" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="资源" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>
            <RadioButton Style="{StaticResource NavButtonStyle}"
                         Command="{Binding NavCommand}"
                         CommandParameter="2">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xe600;" FontFamily="../Assets/Fonts/#iconfont" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="生产" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>
            <RadioButton Style="{StaticResource NavButtonStyle}"
                         Command="{Binding NavCommand}"
                         CommandParameter="9">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xe60f;" FontFamily="../Assets/Fonts/#iconfont" FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="设置" VerticalAlignment="Center"/>
                </StackPanel>
            </RadioButton>
        </StackPanel>

        <Button Width="40" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10,0" BorderThickness="0" Background="Transparent"
         WindowChrome.IsHitTestVisibleInChrome="True" Click="Button_Click">
            <Path Data="M0 0 12 12M12 0 0 12" Stroke="#FFF" StrokeThickness=" 1"/>
        </Button>

        <!--导航信息：面包屑-->
        <TextBlock Text="MES > 资源 > 工厂资源 > 设备管理" Grid.Row="1" VerticalAlignment="Center" Margin="20,0" Foreground="#888"/>


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <ContentControl Margin="8" VerticalAlignment="Top"
                            p:RegionManager.RegionName="MenuRegion"/>
            
        </Grid>
    </Grid>
</Window>
