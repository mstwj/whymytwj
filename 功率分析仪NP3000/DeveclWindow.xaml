<Window x:Class="功率分析仪NP3000.DeveclWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:功率分析仪NP3000"
        mc:Ignorable="d"
        Title="DeveclWindow" Height="200" Width="400">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Background="#2263B3" Grid.Row="0">
            <TextBlock Text="设备设置" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
        </Border>

        <Border Background="#FFE2E2E2" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>



                <TextBlock Grid.Row="1" Grid.Column="0" FontSize="18" Text="串口设置" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 10 0" ></TextBlock>
                <ComboBox x:Name="Device_CBox" Grid.Row="1" Grid.Column="1" FontSize="18" Width="150" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 0" SelectedItem="{Binding SelectItem}" ItemsSource="{Binding ComboBoxItems}"  />

            </Grid>
        </Border>


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button  Content="保存配置" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Click="Button_Click_Save"></Button>
            <Button  Content="退出配置" FontSize="15" Height="35" Width="80" Margin="10 0 0 0" Click="Button_Click_Quit"></Button>
        </StackPanel>
    </Grid>
</Window>
