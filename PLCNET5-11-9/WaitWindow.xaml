<Window x:Class="PLCNET5_11_9.WaitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLCNET5_11_9"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="配置窗口" Height="150" Width="350">

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Opacity="0.9" >
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="正在处理指令，请等待指令处理完成..." FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <ProgressBar IsIndeterminate="True" Height="30"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>
