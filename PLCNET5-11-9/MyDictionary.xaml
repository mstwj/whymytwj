<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 定义一个图片资源 -->
    <ImageBrush x:Key="Buttonan1" ImageSource="pack://application:,,,/Asset/an2.png" />
    <ImageBrush x:Key="Buttonan2" ImageSource="pack://application:,,,/Asset/an1.png" />

    <ImageBrush x:Key="Buttonan3" ImageSource="pack://application:,,,/Asset/an4.png" />
    <ImageBrush x:Key="Buttonan4" ImageSource="pack://application:,,,/Asset/an3.png" />

    <ImageBrush x:Key="Buttonan5" ImageSource="pack://application:,,,/Asset/an5.png" />
    <ImageBrush x:Key="Buttonan6" ImageSource="pack://application:,,,/Asset/an6.png" />

    <ImageBrush x:Key="Buttonan7" ImageSource="pack://application:,,,/Asset/guanbi.jpg" />
    <ImageBrush x:Key="Buttonan8" ImageSource="pack://application:,,,/Asset/guanbi2.jpg" />
    
    

    <!-- 定义Button样式 -->
    <Style TargetType="Button" x:Key="ButtonTemplate1">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- 按钮被点击时的触发器 -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource Buttonan1}"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource Buttonan2}"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- 定义Button样式 -->
    <Style TargetType="Button" x:Key="ButtonTemplate2">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- 按钮被点击时的触发器 -->
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource Buttonan3}"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="False">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource Buttonan4}"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <!--BorderBrush就理解为蒙板-->
                            <Setter TargetName="border" Property="Opacity" Value="0.5" />
                            <Setter TargetName="border" Property="BorderBrush" Value="LightBlue" />

                        </Trigger>


                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



