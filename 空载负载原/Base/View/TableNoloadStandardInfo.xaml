<Window x:Class="空载_负载.TableNoloadStandardInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:空载_负载"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="" Height="600" Width="800">
    <Grid>
        <Grid ShowGridLines="True" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>

            <Border Background="#2263B3" Grid.Row="0">
                <TextBlock Text="空载标准库" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"  Foreground="White"></TextBlock>
            </Border>

            <DataGrid x:Name="dataGrid" RowEditEnding="dataGrid_RowEditEnding"                                             
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                      FontSize="15"
                Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="规格型号" Binding="{Binding ProductType}" />
                    <DataGridTextColumn Header="图号" Binding="{Binding ProductTuhao}" />
                    <DataGridTextColumn Header="空载损耗(W)" Binding="{Binding LossStandard }" />
                    <DataGridTextColumn Header="空载损耗上限(%)" Binding="{Binding LossStandardUp }" />
                    <DataGridTextColumn Header="空载损耗下限(%)" Binding="{Binding LossStandardDown }" />
                    <DataGridTextColumn Header="空载电流" Binding="{Binding NoloadCurrentStandard }" />
                    <DataGridTextColumn Header="空载电流上限(%)" Binding="{Binding NoloadCurrentStandardUp }" />
                    <DataGridTextColumn Header="空载电流下限(%)" Binding="{Binding NoloadCurrentStandardDown }" />
                    <DataGridTextColumn Header="阻抗电压" Binding="{Binding ImpedanceStandard }" />
                </DataGrid.Columns>
            </DataGrid>
            
            <StackPanel Grid.Row="2" Grid.Column="0" Height="40" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Label Content="按照" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10 0 5 0"></Label>
                <ComboBox Width="120" SelectedIndex="0" x:Name="ComboBoxName" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Height="30" Margin="0 0 10 0"  >
                    <ComboBoxItem Content="类型"></ComboBoxItem>
                    <ComboBoxItem Content="图号"></ComboBoxItem>
                </ComboBox>

                <TextBox Text="{Binding SelectSea}" Width="200" FontSize="16"  Height="25" ></TextBox>
                <Button Click="QueryButton_Click" Content="查询" Width="80" Margin="10 0 10 0" FontSize="16" Height="25"></Button>
                <Button Click="DeleteButton_Click" Content="删除" Width="80" Margin="10 0 10 0" FontSize="16" Height="25"></Button>
                <Button Click="AddButton_Click" Content="添加" Width="80" Margin="10 0 10 0" FontSize="16" Height="25"></Button>
            </StackPanel>



        </Grid>

    </Grid>
</Window>
