<Window x:Class="空载_负载.Base.View.AddProcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:空载_负载.Base.View"
        mc:Ignorable="d"
        Title="AddProcWindow" Height="450" Width="430">
    <Grid>
        <Grid  Background="#FFE2E2E2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="60"></RowDefinition>
            </Grid.RowDefinitions>




            <GroupBox Header="产品信息" BorderThickness="2" BorderBrush="Black"  Background="#FFE2E2E2"  FontSize="16" Grid.Row="0"  Margin="15">

                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="18"/>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>


                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="规格型号:" Width="120" Margin="20 0"></TextBlock>
                        <TextBox MaxLength="50" Text="{Binding ProductType}" Width="200" ></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="图号:"  Width="120" Margin="20 0"></TextBlock>
                        <TextBox MaxLength="50" Text="{Binding ProductTuhao}" Width="200" ></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="容量:" Width="120" Margin="20 0"></TextBlock>
                        <TextBox MaxLength="50" Text="{Binding Highpressure}" Width="200" ></TextBox>
                    </StackPanel>


                    <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="高压侧电压(kV):" Width="120" Margin="20 0"></TextBlock>
                        <TextBox MaxLength="50" Text="{Binding Highpressure}" Width="200" ></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock Width="120" Text="高压侧电流:(A):"  Margin="20 0"></TextBlock>
                        <TextBox MaxLength="50" Text="{Binding Highcurrent}" Width="200"></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock Width="120" Text="低压侧电压(kV):"  Margin="20 0"></TextBlock>
                        <TextBox MaxLength="50" Text="{Binding Lowpressure}" Width="200"></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="6" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Width="120" Text="低压侧电流(A):"  Margin="20 0"></TextBlock>
                        <TextBox MaxLength="50" Text="{Binding Lowcurrent}" Width="200"></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="7" Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left">
                        <TextBlock  Text="相数:" Width="120" Margin="20 0"></TextBlock>
                        <ComboBox Width="200" SelectedItem="{Binding SelectBoxItem}">
                            <ComboBoxItem Content="三相"></ComboBoxItem>
                            <ComboBoxItem Content="单相"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>


                </Grid>

            </GroupBox>

            <Border Grid.Row="2" Grid.Column="0"  Background="#2263B3" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <Button  Content="确定" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Click="Button_Click" ></Button>
                    <Button  Content="退出" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" Click="Button_Click_1" ></Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
