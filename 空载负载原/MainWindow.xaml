<Window x:Class="空载_负载.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:空载_负载"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">

    <Window.Resources>
        
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <!-- 菜单高度 这里还要加1个高度，就是 图标高度，就是 最小化 最大话按钮的高度，他们是40 -->
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="700"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Height="25" VerticalAlignment="Top" Grid.Row="0" >
            <MenuItem Header="创建试验任务">
                <MenuItem Header="产品信息录入" Click="DoBtnMenu1_1Click" />
                <Separator/>
                <MenuItem Header="退出" Click="DoBtnMenu1_2Click" />
            </MenuItem>
            <MenuItem Header="试验" >
                <MenuItem Header="空载试验" Click="DoBtnMenu2_1Click" />
                <MenuItem Header="负载试验"  Click="DoBtnMenu2_2Click" />
                <MenuItem Header="感应耐压试验"  Click="DoBtnMenu2_3Click" />
                <MenuItem Header="工频耐压试验"  Click="DoBtnMenu2_4Click" />
            </MenuItem>

            <MenuItem Header="数据管理">
                <MenuItem Header="空载实验报表"  Click="DoBtnMenu3_1Click" />
                <MenuItem Header="负载实验报表"  Click="DoBtnMenu3_2Click" />
                <MenuItem Header="感应实验报表"  Click="DoBtnMenu3_3Click" />
                <Separator/>
                <MenuItem Header="空载实验标准表"  Click="DoBtnMenu3_4Click" />
                <MenuItem Header="负载实验标准表"  Click="DoBtnMenu3_5Click" />
                <MenuItem Header="感应实验标准表"  Click="DoBtnMenu3_6Click" />
                <Separator/>
                <MenuItem Header="产品信息标准表"  Click="DoBtnMenu3_7Click" />

            </MenuItem>

            <MenuItem Header="系统设置">
                <MenuItem Header="通讯设置" Click="DoBtnMenu4_1Click" />
            </MenuItem>
        </Menu>

        <ContentControl Grid.Row="1" Content="{Binding ContentView}"></ContentControl>

    </Grid>
</Window>
