<UserControl x:Class="空载_负载.View.NoloadPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:空载_负载.View"
             mc:Ignorable="d" 
             >

    <UserControl.Resources>
        <Style TargetType="GroupBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </UserControl.Resources>

    <Grid Width="1000" Height="700">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <GroupBox Header="分析仪" Grid.Row="0" Grid.Column="0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <local:UserDevcel x:Name="UserDevcel"></local:UserDevcel>

                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5" HorizontalAlignment="Center">
                    <Button Content="开始采集" Margin="20 0" Width="120" Command="{Binding Command13}"></Button>
                    <Button Content="结束采集" Margin="20 0" Width="120" Command="{Binding Command14}"></Button>
                    <Button Content="保存数据" Margin="20 0" Width="120" Command="{Binding Command12}"></Button>
                </StackPanel>
            </Grid>
            
        </GroupBox>

        <GroupBox Header="PLC" Grid.Row="1" >
            <local:UserPlcDevcel x:Name="UserPlcDevcel"></local:UserPlcDevcel>
        </GroupBox>

        <GroupBox Header="试验结果" Grid.Row="2" >
            <local:UserRecordControl x:Name="UserRecordControl" ></local:UserRecordControl>
        </GroupBox>

        <GroupBox Header="当前产品" Grid.Row="2" Grid.Column="1">
            <local:UserInfoControl  x:Name="UserInfoControl" ></local:UserInfoControl>
        </GroupBox>

        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition ></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition ></RowDefinition>
                    
                </Grid.RowDefinitions>

                <GroupBox Header="设备状态" Grid.Row="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="PLC"></TextBlock>
                            <Image Width="30" Height="30" Source="{Binding PlcImage}" Margin="0 20" ></Image>
                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="分析仪"></TextBlock>
                            <Image Height="30" Width="30" Source="{Binding DevImage}"  Margin="0 20"></Image>
                        </StackPanel>

                    </Grid>
                </GroupBox>

                <GroupBox Header="CT变比" Grid.Row="1" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>


                        <Button Grid.Row="0" Grid.Column="0" Content="5A" Width="80" Height="30" Command="{Binding Command5A}"></Button>
                        <Button Grid.Row="0" Grid.Column="1" Content="10A" Width="80" Height="30" Command="{Binding Command10A}"></Button>
                        <Button Grid.Row="1" Grid.Column="0" Content="25A" Width="80" Height="30" Command="{Binding Command25A}"></Button>
                        <Button Grid.Row="1" Grid.Column="1" Content="50A" Width="80" Height="30" Command="{Binding Command50A}"></Button>
                        <Button Grid.Row="2" Grid.Column="0" Content="100A" Width="80" Height="30" Command="{Binding Command100A}"></Button>
                        <Button Grid.Row="2" Grid.Column="1" Content="200A" Width="80" Height="30" Command="{Binding Command200A}"></Button>

                        
                        <ComboBox Grid.Row="3" Grid.ColumnSpan="2" FontSize="15" Height="40" Width="160" SelectedIndex="{Binding timeSelect}">
                            <ComboBoxItem Content="连续1秒"></ComboBoxItem>
                            <ComboBoxItem Content="连续2秒"></ComboBoxItem>
                            <ComboBoxItem Content="连续5秒"></ComboBoxItem>
                            <ComboBoxItem Content="连续8秒"></ComboBoxItem>
                        </ComboBox>
                        <Button Content="升压" Grid.Row="4" Grid.Column="0" Margin="5" Command="{Binding Command1}"></Button>
                        <Button Content="降压" Grid.Row="4" Grid.Column="1" Margin="5" Command="{Binding Command2}"></Button>
                        
                    </Grid>
                </GroupBox>

                <GroupBox Header="PT变比" Grid.Row="2" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <!--
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="1.0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                        -->
                        <Button Content="联机" Grid.Row="0" Grid.Column="0"  Command="{Binding CommandDev1}"></Button>
                        <Button Content="开始空载" Grid.Row="1" Grid.Column="0" Command="{Binding CommandDev2}"></Button>
                        <Button Content="开始负载" Grid.Row="2" Grid.Column="0" Command="{Binding CommandDev3}"></Button>

                        <Button Content="停止" Grid.Row="0" Grid.Column="1" Command="{Binding CommandDev4}"></Button>
                        <Button Content="设置" Grid.Row="1" Grid.Column="1" Command="{Binding CommandDev5}"></Button>
                        <Button Content="读取数据" Grid.Row="2" Grid.Column="1" Command="{Binding CommandDev6}"></Button>
                        
                        
                        
                    </Grid>
                    
                </GroupBox>

            </Grid>
        </Border>

        <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <GroupBox Header="参数设置" Grid.Row="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                            <TextBlock Text="试验电压:" VerticalAlignment="Center"></TextBlock>
                            <TextBox Text="" Width="100" Height="30" Margin="10 0"></TextBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5" HorizontalAlignment="Center">
                            <TextBlock Text="保护电压:" VerticalAlignment="Center"></TextBlock>
                            <TextBox Text="" Width="100" Height="30" Margin="10 0"></TextBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5" HorizontalAlignment="Center">
                            <TextBlock Text="保护电流:" VerticalAlignment="Center"></TextBlock>
                            <TextBox Text="" Width="100" Height="30" Margin="10 0"></TextBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="5" HorizontalAlignment="Center">
                            <TextBlock Text="加压部位:" VerticalAlignment="Center"></TextBlock>
                            <TextBox Text="" Width="100" Height="30" Margin="10 0"></TextBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="5" HorizontalAlignment="Center">
                            <TextBlock Text="操作模式:" VerticalAlignment="Center"></TextBlock>
                            <ComboBox Width="100" Height="30" Margin="10 0" SelectedIndex="0">
                                <ComboBoxItem Content="手动"></ComboBoxItem>
                                <ComboBoxItem Content="程控"></ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                    </Grid>
                </GroupBox>

                <GroupBox Header="操作面板" Grid.Row="1" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        
                        <Button Content="电源合闸" Grid.Row="0" Grid.Column="0" Margin="5" Command="{Binding Command3}"></Button>
                        <Button Content="电动机启动" Grid.Row="1" Grid.Column="0" Margin="5" Command="{Binding Command5}"></Button>
                        <Button Content="特性回路" Grid.Row="2" Grid.Column="0" Margin="5" Command="{Binding Command7}"></Button>
                        <Button Content="急停" Grid.Row="3" Grid.Column="0" Margin="5" Command="{Binding Command9}"></Button>
                        <Button Content="复位" Grid.Row="4" Grid.Column="0" Margin="5" Command="{Binding Command11}"></Button>
                        <Button Content="开始自动" Grid.Row="4" Grid.Column="0" Margin="5" Command="{Binding Command30}"></Button>

                        
                        <Button Content="电源分闸" Grid.Row="0" Grid.Column="1" Margin="5" Command="{Binding Command4}"></Button>
                        <Button Content="电动机停止" Grid.Row="1" Grid.Column="1" Margin="5" Command="{Binding Command6}"></Button>
                        <Button Content="工频回路" Grid.Row="2" Grid.Column="1" Margin="5" Command="{Binding Command8}"></Button>
                        <Button Content="感应回路" Grid.Row="3" Grid.Column="1" Margin="5" Command="{Binding Command10}"></Button>

                    </Grid>
                </GroupBox>


                <GroupBox Header="日志" Grid.Row="2">
                    <!--
                    <local:UserStandard x:Name="UserStandard"></local:UserStandard>
                    -->
                    <ListBox  ItemsSource="{Binding ListBoxData}" Grid.Row="1" FontSize="15" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="Blue"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRed}" Value="True">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <TextBlock.Text>
                                        <Binding Path="Text"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </GroupBox>

            </Grid>
            
        </Border>

    </Grid>
</UserControl>
