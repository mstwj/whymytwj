<UserControl x:Class="空载_负载.View.UserDevcel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:空载_负载.View"
             mc:Ignorable="d" 
             >
    <Grid Width="570" Height="160">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="15"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>
            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="Black"></Setter>
                <Setter Property="BorderThickness" Value="1"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!--
        <TextBlock TextWrapping="Wrap"  Grid.Row="0" Grid.Column="1">三相电压 <LineBreak /> Umn(V) </TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="2">电压有效值<LineBreak />Urms(V)
        -->
        <TextBlock TextWrapping="Wrap"  Grid.Row="0" Grid.Column="1">三相电压</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="2">三相平均电压</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="3">三相电流</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="4">三相功率</TextBlock>

        <TextBlock Grid.Row="0" Grid.Column="5">平均电压</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="6">平均电流</TextBlock>

        <TextBlock Grid.Row="2" Grid.Column="5">频率</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="6">实测损耗</TextBlock>

        <TextBlock Grid.Row="0" Grid.Column="7">百分比</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="7">功率因数</TextBlock>

        <!--使用Border绘制边框-->
        <Border Grid.Row="0"></Border>
        <Border Grid.Row="1"></Border>
        <Border Grid.Row="2"></Border>
        <Border Grid.Row="3"></Border>
        

        <Border Grid.Row="0" Grid.Column="1"></Border>
        <Border Grid.Row="1" Background="Yellow" Grid.Column="1"></Border>
        <Border Grid.Row="2" Background="Green " Grid.Column="1"></Border>
        <Border Grid.Row="3" Background="Red" Grid.Column="1"></Border>


        <Border Grid.Row="0" Grid.Column="2"></Border>
        <Border Grid.Row="1" Background="Yellow" Grid.Column="2"></Border>
        <Border Grid.Row="2" Background="Green" Grid.Column="2"></Border>
        <Border Grid.Row="3" Background="Red" Grid.Column="2"></Border>

        <Border Grid.Row="0" Grid.Column="3"></Border>
        <Border Grid.Row="1" Background="Yellow" Grid.Column="3"></Border>
        <Border Grid.Row="2" Background="Green" Grid.Column="3"></Border>
        <Border Grid.Row="3" Background="Red" Grid.Column="3"></Border>

        <Border Grid.Row="0" Grid.Column="4"></Border>
        <Border Grid.Row="1" Background="Yellow" Grid.Column="4"></Border>
        <Border Grid.Row="2" Background="Green" Grid.Column="4"></Border>
        <Border Grid.Row="3" Background="Red" Grid.Column="4"></Border>

        <Border Grid.Row="0" Grid.Column="5"></Border>
        <Border Grid.Row="1" Grid.Column="5" ></Border>
        <Border Grid.Row="2" Grid.Column="5"  ></Border>
        <Border Grid.Row="3" Grid.Column="5"></Border>

        <Border Grid.Row="0" Grid.Column="6"></Border>
        <Border Grid.Row="1" Grid.Column="6" ></Border>
        <Border Grid.Row="2" Grid.Column="6"  ></Border>
        <Border Grid.Row="3" Grid.Column="6"></Border>


        <Border Grid.Row="0" Grid.Column="7"></Border>
        <Border Grid.Row="1" Grid.Column="7" ></Border>
        <Border Grid.Row="2" Grid.Column="7"  ></Border>
        <Border Grid.Row="3" Grid.Column="7"></Border>

        <TextBlock Text="A" Grid.Row="1" Grid.Column="0"></TextBlock>
        <TextBlock Text="{Binding Umn_ab}" Grid.Row="1" Grid.Column="1"></TextBlock>
        <TextBlock Text="{Binding Urms_ab}" Grid.Row="1" Grid.Column="2"></TextBlock>
        <TextBlock Text="{Binding Irms_ab}" Grid.Row="1" Grid.Column="3"></TextBlock>
        <TextBlock Text="{Binding  P_ab}" Grid.Row="1" Grid.Column="4"></TextBlock>

        <TextBlock Text="B" Grid.Row="2" Grid.Column="0"></TextBlock>
        <TextBlock Text="{Binding Umn_bc}" Grid.Row="2" Grid.Column="1"></TextBlock>
        <TextBlock Text="{Binding Urms_bc}" Grid.Row="2" Grid.Column="2"></TextBlock>
        <TextBlock Text="{Binding Irms_bc}" Grid.Row="2" Grid.Column="3"></TextBlock>
        <TextBlock Text="{Binding P_bc}" Grid.Row="2" Grid.Column="4"></TextBlock>

        <TextBlock Text="C" Grid.Row="3" Grid.Column="0"></TextBlock>
        <TextBlock Text="{Binding Umn_ca}" Grid.Row="3" Grid.Column="1"></TextBlock>
        <TextBlock Text="{Binding Urms_ca}" Grid.Row="3" Grid.Column="2"></TextBlock>
        <TextBlock Text="{Binding Irms_ca}" Grid.Row="3" Grid.Column="3"></TextBlock>
        <TextBlock Text="{Binding P_ca}" Grid.Row="3" Grid.Column="4"></TextBlock>

        <TextBlock Text="{Binding Urms_vc}" Grid.Row="1" Grid.Column="5"></TextBlock>
        <TextBlock Text="{Binding Irms_ic}" Grid.Row="1" Grid.Column="6"></TextBlock>
        <TextBlock Text="{Binding Is_pv}" Grid.Row="3" Grid.Column="5"></TextBlock>
        <TextBlock Text="{Binding Pow_loss}" Grid.Row="3" Grid.Column="6"></TextBlock>

        <TextBlock Text="{Binding flt_UkIoPercent}" Grid.Row="1" Grid.Column="7"></TextBlock>
        <TextBlock Text="{Binding flt_CosQ}" Grid.Row="3" Grid.Column="7"></TextBlock>

    </Grid>
</UserControl>
