<Window x:Class="空载_负载.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:空载_负载"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"           
        Title="" Height="280" Width="260">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Background="#FFE2E2E2" Grid.Row="0" >

            <GroupBox Background="#FFE2E2E2" Padding="15" Margin="15" BorderThickness="2" BorderBrush="Black"  Header="用户登入" FontSize="16">

                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="18" />
                    </DataTemplate>
                </GroupBox.HeaderTemplate>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" >
                        <TextBlock  Text="用户名" Margin="10 0 10 0" ></TextBlock>
                        <TextBox x:Name="userBox"  Width="100" Margin="0 0 10 0"></TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" >
                        <TextBlock Text="密码"  VerticalAlignment="Center" Margin="0 0 5 0"></TextBlock>
                        <!--
                        <TextBox PasswordChar="*" Text="{Binding SelectItem2}" Width="100" Margin="0 0 10 0"></TextBox>
                        -->
                        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="100"/>
                        
                        <!--
                        <TextBox Text="{Binding UserPassword}" x:Name="passwordBox" Width="100" Margin="0 0 10 0"  />
                        -->
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!--
            <Button Command="{Binding BtnCommandOK}" CommandParameter="{Binding ElementName=ULWindow}"  Content="确定" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" ></Button>
            -->
            <Button Click="Button_Click_Ok" CommandParameter="{Binding ElementName=ULWindow}"  Content="确定" FontSize="15" Height="35" Width="80" Margin="0 0 10 0" ></Button>
            <Button Click="Button_Click" Content="取消" FontSize="15" Height="35" Width="80" Margin="10 0 0 0" ></Button>
        </StackPanel>
    </Grid>
</Window>
