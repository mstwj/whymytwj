<UserControl x:Class="串口测试.Views.SystemMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:串口测试.Views"
             xmlns:zxc="clr-namespace:串口测试.Base"
             mc:Ignorable="d"              
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid  Height="auto" VerticalAlignment="Top" Margin="20,10" Background="{x:Null}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="#66DFFDFF" BorderThickness="1" CornerRadius="5" Background="#22000000" Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect Color="#FFDFFDFF" ShadowDepth="0" Direction="0" BlurRadius="5"/>
            </Border.Effect>
        </Border>
        
        
       
       
        <Grid VerticalAlignment="Top" Margin="15,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="液位：" VerticalAlignment="Center" Foreground="#99FFFFFF"/>
            <TextBlock Text="入口压力：" Grid.Row="1" VerticalAlignment="Center" Foreground="#99FFFFFF"/>
            <TextBlock Text="入口温度：" Grid.Row="2" VerticalAlignment="Center" Foreground="#99FFFFFF"/>
            <TextBlock Text="出口压力：" Grid.Row="3" VerticalAlignment="Center" Foreground="#99FFFFFF"/>
            <TextBlock Text="出口温度：" Grid.Row="4" VerticalAlignment="Center" Foreground="#99FFFFFF"/>
            <TextBlock Text="补水压力：" Grid.Row="5" VerticalAlignment="Center" Foreground="#99FFFFFF"/>

            <TextBlock Text="5 " Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
            <TextBlock Text="m" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
            <TextBlock Text="50 " Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
            <TextBlock Text="Mpa" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
            <TextBlock Text="50 " Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
            <TextBlock Text="℃" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
            <TextBlock Text="50 " Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
            <TextBlock Text="Mpa" Grid.Column="3" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
            <TextBlock Text="50 " Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
            <TextBlock Text="℃" Grid.Column="3" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
            <TextBlock Text="50 " Grid.Column="2" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
            <TextBlock Text="Mpa" Grid.Column="3" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>

        </Grid>


        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="系统总览" Foreground="White" FontSize="16" HorizontalAlignment="Right" Margin="0,0,20,0"/>
            <UniformGrid Columns="3" Margin="0,40,0,0">
                <StackPanel>
                    <TextBlock Text="监控值" HorizontalAlignment="Center" Foreground="#99FFFFFF"/>
                    <zxc:CircularProgressBar Value="{Binding PageModel.GlobalMonitorValue1}" Width="60" Height="90" BackColor="#EEE" ForeColor="#20c9b4"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="监控值" HorizontalAlignment="Center" Foreground="#99FFFFFF"/>
                    <zxc:CircularProgressBar Value="{Binding PageModel.GlobalMonitorValue2}" Width="60" Height="90" BackColor="#EEE" ForeColor="Orange"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="监控值" HorizontalAlignment="Center"  Foreground="#99FFFFFF"/>
                    <zxc:CircularProgressBar Value="{Binding PageModel.GlobalMonitorValue3}" Width="60" Height="90" BackColor="#EEE" ForeColor="#38baec"/>
                </StackPanel>
            </UniformGrid>

            <TextBlock Text="实时日志" Foreground="#44FFFFFF" Grid.Row="2" Margin="5,10"/>
            <TextBlock Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" FontSize="11">
                    <Hyperlink Foreground="#66DFFDFF">详情</Hyperlink>
            </TextBlock>

            <ItemsControl Grid.Row="3" ItemsSource="{Binding PageModel.Logs}" AlternationCount="2">
            </ItemsControl>
        </Grid>
    </Grid>
</UserControl>
